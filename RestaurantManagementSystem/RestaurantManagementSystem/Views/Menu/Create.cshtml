@model RestaurantManagementSystem.ViewModels.MenuItemViewModel

@{
    ViewData["Title"] = "Create Menu Item";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4>Create Menu Item</h4>
                    <div class="float-right">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fa fa-arrow-left"></i> Back to List
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <ul class="nav nav-tabs nav-fill mb-3" id="menuItemTabs" role="tablist">
                            <li class="nav-item" role="presentation">
                                <button class="nav-link active" id="general-tab" data-bs-toggle="tab" data-bs-target="#general" type="button" role="tab" aria-controls="general" aria-selected="true">
                                    <i class="fas fa-info-circle me-1"></i> General
                                </button>
                            </li>
                        </ul>
                        
                        <div class="tab-content py-3" id="menuItemTabsContent">
                            <!-- General Tab -->
                            <div class="tab-pane fade show active" id="general" role="tabpanel" aria-labelledby="general-tab">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group mb-2">
                                            <label asp-for="PLUCode" class="form-label small mb-1">Item Code</label>
                                            <input asp-for="PLUCode" class="form-control form-control-sm" placeholder="Enter item code" required />
                                            <span asp-validation-for="PLUCode" class="text-danger small"></span>
                                        </div>
                                        <div class="form-group mb-2">
                                            <label asp-for="MenuItemGroupId" class="form-label small mb-1">Item Group</label>
                                            <select asp-for="MenuItemGroupId" class="form-select form-select-sm" asp-items="ViewBag.MenuItemGroups" required aria-required="true">
                                                <option value="">-- Select Item Group --</option>
                                            </select>
                                            <div class="invalid-feedback">Please select an item group.</div>
                                            <span asp-validation-for="MenuItemGroupId" class="text-danger small"></span>
                                        </div>
                                        
                                        <div class="form-group mb-2">
                                            <label asp-for="Name" class="form-label small mb-1">Item Name</label>
                                            <input asp-for="Name" class="form-control form-control-sm" placeholder="Enter item name" />
                                            <span asp-validation-for="Name" class="text-danger small"></span>
                                        </div>
                                        
                                        <div class="form-group mb-2">
                                            <label asp-for="Price" class="form-label small mb-1">Price (₹)</label>
                                            <div class="input-group input-group-sm">
                                                <span class="input-group-text">₹</span>
                                                <input asp-for="Price" class="form-control form-control-sm" type="number" step="0.01" placeholder="0.00" />
                                            </div>
                                            <span asp-validation-for="Price" class="text-danger small"></span>
                                        </div>
                                        
                                        <div class="form-group mb-2">
                                            <label asp-for="TakeoutPrice" class="form-label small mb-1">B2C Price (₹)</label>
                                            <div class="input-group input-group-sm">
                                                <span class="input-group-text">₹</span>
                                                <input asp-for="TakeoutPrice" class="form-control form-control-sm" type="number" step="0.01" placeholder="0.00" />
                                            </div>
                                            <span asp-validation-for="TakeoutPrice" class="text-danger small"></span>
                                        </div>
                                        
                                        <div class="form-group mb-2">
                                            <label asp-for="DeliveryPrice" class="form-label small mb-1">Delivery Price (₹)</label>
                                            <div class="input-group input-group-sm">
                                                <span class="input-group-text">₹</span>
                                                <input asp-for="DeliveryPrice" class="form-control form-control-sm" type="number" step="0.01" placeholder="0.00" />
                                            </div>
                                            <span asp-validation-for="DeliveryPrice" class="text-danger small"></span>
                                        </div>

                                        <div class="form-group mb-2">
                                            <label asp-for="RoomServicePrice" class="form-label small mb-1">Room Service Price (₹)</label>
                                            <div class="input-group input-group-sm">
                                                <span class="input-group-text">₹</span>
                                                <input asp-for="RoomServicePrice" class="form-control form-control-sm" type="number" step="0.01" placeholder="0.00" />
                                            </div>
                                            <span asp-validation-for="RoomServicePrice" class="text-danger small"></span>
                                        </div>
                                        
                                        <!-- UOM Dropdown - Visible only for BAR items -->
                                        <div class="form-group mb-2" id="uom-group" style="display: none;">
                                            <label asp-for="UOMId" class="form-label small mb-1">Unit of Measurement</label>
                                            <select asp-for="UOMId" class="form-select form-select-sm" asp-items="ViewBag.UOMs">
                                                <option value="">-- Select UOM --</option>
                                            </select>
                                            <span asp-validation-for="UOMId" class="text-danger small"></span>
                                        </div>
                                        
                                        <div class="form-group mb-2">
                                            <label asp-for="CategoryId" class="form-label small mb-1">Category</label>
                                            <select asp-for="CategoryId" class="form-select form-select-sm" asp-items="ViewBag.Categories" onchange="loadSubCategories()">
                                                <option value="">-- Select Category --</option>
                                            </select>
                                            <span asp-validation-for="CategoryId" class="text-danger small"></span>
                                        </div>

                                        <div class="form-group mb-2">
                                            <label asp-for="SubCategoryId" class="form-label small mb-1 required">Sub Category</label>
                                            <select asp-for="SubCategoryId" class="form-select form-select-sm" asp-items="ViewBag.SubCategories" required aria-required="true">
                                                <option value="">-- Select Sub Category --</option>
                                            </select>
                                            <div class="invalid-feedback">Please select a sub category.</div>
                                            <span asp-validation-for="SubCategoryId" class="text-danger small"></span>
                                        </div>

                                    </div>
                                    
                                    <div class="col-md-6">
                                        <input type="hidden" asp-for="PreparationTimeMinutes" value="@(Model.PreparationTimeMinutes <= 0 ? 1 : Model.PreparationTimeMinutes)" />
                                        <input type="hidden" asp-for="CalorieCount" />
                                        <input type="hidden" asp-for="KitchenStationId" />
                                        
                                        <div class="form-group mb-2">
                                            <label asp-for="DiscountPercentage" class="form-label small mb-1">Discount (%)</label>
                                            <div class="input-group input-group-sm">
                                                <input asp-for="DiscountPercentage" class="form-control form-control-sm" type="number" step="0.01" placeholder="0.00" />
                                                <span class="input-group-text">%</span>
                                            </div>
                                            <span asp-validation-for="DiscountPercentage" class="text-danger small"></span>
                                        </div>
                                        
                                        <div class="form-check form-switch mb-2">
                                            <input asp-for="IsGstApplicable" class="form-check-input" id="IsGstApplicableCreate" />
                                            <label class="form-check-label small" for="IsGstApplicableCreate">Is GST Applicable</label>
                                        </div>
                                        <div class="form-group mb-2">
                                            <label asp-for="GSTPercentage" class="form-label small mb-1">GST Percentage</label>
                                            <div class="input-group input-group-sm">
                                                <input asp-for="GSTPercentage" class="form-control form-control-sm" type="number" step="0.01" placeholder="0.00" />
                                                <span class="input-group-text">%</span>
                                            </div>
                                            <span asp-validation-for="GSTPercentage" class="text-danger small"></span>
                                        </div>
                                        
                                        <div class="form-group mb-2">
                                            <label asp-for="ImageFile" class="form-label small mb-1">Item Image</label>
                                            <input asp-for="ImageFile" type="file" class="form-control form-control-sm" accept="image/*" />
                                            <span asp-validation-for="ImageFile" class="text-danger small"></span>
                                        </div>
                                        
                                        <div class="form-group mb-2">
                                            <label asp-for="Description" class="form-label small mb-1">Description</label>
                                            <textarea asp-for="Description" class="form-control form-control-sm" rows="3" placeholder="Enter item description"></textarea>
                                            <span asp-validation-for="Description" class="text-danger small"></span>
                                        </div>

                                        <div class="row">
                                            <div class="col-md-4">
                                                <div class="d-flex gap-3">
                                                    <div class="form-check mb-2">
                                                        <input asp-for="IsAvailable" class="form-check-input" />
                                                        <label asp-for="IsAvailable" class="form-check-label small">Available</label>
                                                    </div>
                                                    <div class="form-check mb-2">
                                                        <input asp-for="NotAvailable" class="form-check-input" id="NotAvailableCreate" />
                                                        <label class="form-check-label small" for="NotAvailableCreate">Not Available</label>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-check mb-2">
                                                    <input asp-for="IsFeatured" class="form-check-input" />
                                                    <label asp-for="IsFeatured" class="form-check-label small">Featured</label>
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-check mb-2">
                                                    <input asp-for="IsSpecial" class="form-check-input" />
                                                    <label asp-for="IsSpecial" class="form-check-label small">Special</label>
                                                </div>
                                            </div>
                                        </div>
                                        
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fa fa-times me-1"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fa fa-save me-1"></i> Create Menu Item
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

