@model RestaurantManagementSystem.ViewModels.MenuItemViewModel

@{
    ViewData["Title"] = "Edit Menu Item";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4>Edit Menu Item</h4>
                    <div class="float-right">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fa fa-arrow-left"></i> Back to List
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="ImagePath" />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="PreparationTimeMinutes" value="@(Model.PreparationTimeMinutes <= 0 ? 1 : Model.PreparationTimeMinutes)" />
                        <input type="hidden" asp-for="CalorieCount" />
                        <input type="hidden" asp-for="KitchenStationId" />
                        @if (Model.SelectedAllergens != null)
                        {
                            @foreach (var allergenId in Model.SelectedAllergens)
                            {
                                <input type="hidden" name="SelectedAllergens" value="@allergenId" />
                            }
                        }
                        @if (Model.SelectedModifiers != null)
                        {
                            @foreach (var modifierId in Model.SelectedModifiers)
                            {
                                <input type="hidden" name="SelectedModifiers" value="@modifierId" />
                            }
                        }
                        @if (Model.ModifierPrices != null)
                        {
                            @foreach (var modifierPrice in Model.ModifierPrices)
                            {
                                <input type="hidden" name="ModifierPrices[@modifierPrice.Key]" value="@modifierPrice.Value" />
                            }
                        }
                        
                        <ul class="nav nav-tabs nav-fill mb-3" id="menuItemTabs" role="tablist">
                            <li class="nav-item" role="presentation">
                                <button class="nav-link active" id="general-tab" data-bs-toggle="tab" data-bs-target="#general" type="button" role="tab" aria-controls="general" aria-selected="true">
                                    <i class="fas fa-info-circle me-1"></i> General
                                </button>
                            </li>
                        </ul>
                        
                        <div class="tab-content pt-3" id="menuItemTabsContent">
                            <!-- General Tab -->
                            <div class="tab-pane fade show active" id="general" role="tabpanel" aria-labelledby="general-tab">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="PLUCode" class="control-label"></label>
                                            <input asp-for="PLUCode" class="form-control" required />
                                            <span asp-validation-for="PLUCode" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="MenuItemGroupId" class="control-label">Item Group</label>
                                            <select asp-for="MenuItemGroupId" class="form-control" asp-items="ViewBag.MenuItemGroups" required aria-required="true">
                                                <option value="">-- Select Item Group --</option>
                                            </select>
                                            <div class="invalid-feedback">Please select an item group.</div>
                                            <span asp-validation-for="MenuItemGroupId" class="text-danger"></span>
                                        </div>
                                        
                                        <div class="form-group">
                                            <label asp-for="Name" class="control-label"></label>
                                            <input asp-for="Name" class="form-control" />
                                            <span asp-validation-for="Name" class="text-danger"></span>
                                        </div>
                                        
                                        <div class="form-group">
                                            <label asp-for="Price" class="control-label"></label>
                                            <input asp-for="Price" class="form-control" type="number" step="0.01" />
                                            <span asp-validation-for="Price" class="text-danger"></span>
                                        </div>
                                        
                                        <div class="form-group">
                                            <label asp-for="TakeoutPrice" class="control-label"></label>
                                            <input asp-for="TakeoutPrice" class="form-control" type="number" step="0.01" />
                                            <span asp-validation-for="TakeoutPrice" class="text-danger"></span>
                                        </div>
                                        
                                        <div class="form-group">
                                            <label asp-for="DeliveryPrice" class="control-label"></label>
                                            <input asp-for="DeliveryPrice" class="form-control" type="number" step="0.01" />
                                            <span asp-validation-for="DeliveryPrice" class="text-danger"></span>
                                        </div>

                                        <div class="form-group">
                                            <label asp-for="RoomServicePrice" class="control-label"></label>
                                            <input asp-for="RoomServicePrice" class="form-control" type="number" step="0.01" />
                                            <span asp-validation-for="RoomServicePrice" class="text-danger"></span>
                                        </div>
                                        
                                        <!-- UOM Dropdown - Visible only for BAR items -->
                                        <div class="form-group" id="uom-group" style="display: none;">
                                            <label asp-for="UOMId" class="control-label">Unit of Measurement</label>
                                            <select asp-for="UOMId" class="form-control" asp-items="ViewBag.UOMs">
                                                <option value="">-- Select UOM --</option>
                                            </select>
                                            <span asp-validation-for="UOMId" class="text-danger"></span>
                                        </div>
                                        
                                        <div class="form-group">
                                            <label asp-for="CategoryId" class="control-label"></label>
                                            <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories" onchange="loadSubCategories()">
                                                <option value="">-- Select Category --</option>
                                            </select>
                                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                                        </div>

                                        <div class="form-group">
                                            <label asp-for="SubCategoryId" class="control-label required"></label>
                                            <select asp-for="SubCategoryId" class="form-control" asp-items="ViewBag.SubCategories" required aria-required="true">
                                                <option value="">-- Select Sub Category --</option>
                                            </select>
                                            <div class="invalid-feedback">Please select a sub category.</div>
                                            <span asp-validation-for="SubCategoryId" class="text-danger"></span>
                                        </div>

                                    </div>
                                    
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="DiscountPercentage" class="control-label"></label>
                                            <input asp-for="DiscountPercentage" class="form-control" type="number" step="0.01" />
                                            <span asp-validation-for="DiscountPercentage" class="text-danger"></span>
                                        </div>
                                        
                                        <div class="form-check form-switch mb-2">
                                            <input asp-for="IsGstApplicable" class="form-check-input" id="IsGstApplicableEdit" />
                                            <label class="form-check-label" for="IsGstApplicableEdit">Is GST Applicable</label>
                                        </div>
                                        <div class="form-group mb-2">
                                            <label asp-for="GSTPercentage" class="control-label">GST Percentage</label>
                                            <input asp-for="GSTPercentage" class="form-control" type="number" step="0.01" />
                                            <span asp-validation-for="GSTPercentage" class="text-danger"></span>
                                        </div>
                                        
                                        <div class="form-group">
                                            <label asp-for="ImageFile" class="control-label"></label>
                                            @if (!string.IsNullOrEmpty(Model.ImagePath))
                                            {
                                                <div class="mb-2">
                                                    <img src="@Model.ImagePath" class="img-thumbnail" style="max-height: 100px;" />
                                                </div>
                                            }
                                            <div class="custom-file">
                                                <input asp-for="ImageFile" type="file" class="custom-file-input" id="customFile" accept="image/*" onchange="displayFileName(this)" />
                                                <label class="custom-file-label" for="customFile">Choose new file</label>
                                            </div>
                                            <span asp-validation-for="ImageFile" class="text-danger"></span>
                                        </div>

                                        <div class="form-check form-check-inline mt-3">
                                            <input asp-for="IsAvailable" class="form-check-input" />
                                            <label asp-for="IsAvailable" class="form-check-label"></label>
                                        </div>
                                        <div class="form-check form-check-inline mt-3 ms-2">
                                            <input asp-for="NotAvailable" class="form-check-input" id="NotAvailableEdit" />
                                            <label class="form-check-label" for="NotAvailableEdit">Not Available</label>
                                        </div>
                                        
                                        <div class="form-check form-check-inline">
                                            <input asp-for="IsFeatured" class="form-check-input" />
                                            <label asp-for="IsFeatured" class="form-check-label"></label>
                                        </div>
                                        
                                        <div class="form-check form-check-inline">
                                            <input asp-for="IsSpecial" class="form-check-input" />
                                            <label asp-for="IsSpecial" class="form-check-label"></label>
                                        </div>
                                    </div>

                                    <div class="col-md-12 mt-3">
                                        <div class="form-group">
                                            <label asp-for="Description" class="control-label"></label>
                                            <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                                            <span asp-validation-for="Description" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mt-4 text-right">
                            <button type="submit" class="btn btn-primary">
                                <i class="fa fa-save"></i> Save Changes
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fa fa-times"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Ingredients feature removed intentionally -->

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        // Display filename when selecting an image
        function displayFileName(input) {
            if (input.files && input.files[0]) {
                var fileName = input.files[0].name;
                $(input).next('.custom-file-label').html(fileName);
            }
        }
        
        // Toggle price adjustment field visibility
        function togglePriceField(modifierId) {
            const checkbox = $(`#modifier-${modifierId}`);
            const priceGroup = $(`#price-group-${modifierId}`);
            
            if (checkbox.is(':checked')) {
                priceGroup.slideDown();
            } else {
                priceGroup.slideUp();
            }
        }
        
    $(document).ready(function() {
            
            // Initialize Bootstrap tooltips
            $('[data-bs-toggle="tooltip"]').tooltip();
            
            // Handle tab navigation from URL hash
            if (window.location.hash) {
                const hash = window.location.hash;
                const tabId = hash.replace('#', '') + '-tab';
                $('#' + tabId).tab('show');
            }
            
            // Ingredients feature removed
            
            // Form validation before submission
            $('form').on('submit', function(e) {
                if (!this.checkValidity()) {
                    e.preventDefault();
                    e.stopPropagation();
                    
                    // Find the first invalid field and activate its tab
                    const invalidFields = $(this).find(':invalid');
                    if (invalidFields.length > 0) {
                        const tabPane = $(invalidFields[0]).closest('.tab-pane');
                        const tabPaneId = tabPane.attr('id');
                        if (tabPaneId) {
                            const tabId = tabPaneId + '-tab';
                            const tabButton = document.getElementById(tabId);
                            if (tabButton) {
                                tabButton.click();
                            }
                        }
                        
                        // Scroll to and focus the first invalid field
                        $('html, body').animate({
                            scrollTop: $(invalidFields[0]).offset().top - 100
                        }, 500);
                        $(invalidFields[0]).focus();
                        
                        // Show validation message
                        $(this).addClass('was-validated');
                    }
                }
            });
            function toggleGstField(){
                const gstApplicable = $('#IsGstApplicableEdit').is(':checked');
                const gstInput = $('input[name="GSTPercentage"]');
                gstInput.prop('disabled', !gstApplicable);
                if(!gstApplicable){
                    gstInput.val('');
                }
            }
            $('#IsGstApplicableEdit').on('change', toggleGstField);
            toggleGstField();
            
            // Toggle UOM dropdown visibility based on Item Group selection
            function getDisplayGroupName(groupName) {
                const normalized = (groupName || '').trim().toUpperCase();
                if (normalized === 'FOODS') return 'General';
                if (normalized === 'BAR') return 'Others';
                return groupName;
            }

            function normalizeItemGroupOptions() {
                $('#MenuItemGroupId option').each(function() {
                    const option = $(this);
                    const originalText = option.attr('data-original-group') || option.text().trim();
                    option.attr('data-original-group', originalText);
                    if (option.val()) {
                        option.text(getDisplayGroupName(originalText));
                    }
                });
            }

            function toggleUOMField() {
                var selectedOption = $('#MenuItemGroupId option:selected');
                var selectedGroup = (selectedOption.attr('data-original-group') || selectedOption.text() || '').trim().toUpperCase();
                var uomGroup = $('#uom-group');
                
                if (selectedGroup === 'BAR') {
                    uomGroup.show();
                } else {
                    uomGroup.hide();
                    $('#UOMId').val(''); // Clear selection when hiding
                }
            }
            
            // Bind change event to Item Group dropdown
            $('#MenuItemGroupId').on('change', toggleUOMField);
            
            // Check initial state on page load
            normalizeItemGroupOptions();
            toggleUOMField();
            
            // Load subcategories on page load if category is selected
            // The subcategories are already loaded by the server, only reload if category changes
        });

        // Load subcategories based on selected category
        function loadSubCategories() {
            var categoryId = $('#CategoryId').val();
            var subCategorySelect = $('#SubCategoryId');
            
            // Clear existing options except the first one
            subCategorySelect.find('option:not(:first)').remove();
            
            if (categoryId) {
                $.get('@Url.Action("GetSubCategoriesByCategory", "Menu")', { categoryId: categoryId })
                    .done(function(data) {
                        $.each(data, function(index, item) {
                            var option = '<option value="' + item.value + '">' + item.text + '</option>';
                            subCategorySelect.append(option);
                        });
                        
                        // Note: Don't set selected value here as it will override server-side selection
                        // The selected value should be maintained by the server-side ViewBag.SubCategories
                    })
                    .fail(function() {
                        console.log('Error loading subcategories');
                    });
            } else {
                // If no category selected, also clear the subcategory selection
                subCategorySelect.val('');
            }
        }
    </script>
}
