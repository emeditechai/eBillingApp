@model IEnumerable<RestaurantManagementSystem.Models.MenuItem>

@{
    ViewData["Title"] = "Menu Items";

    string GetItemGroupDisplayName(string groupName)
    {
        if (string.Equals(groupName, "Foods", StringComparison.OrdinalIgnoreCase)) return "General";
        if (string.Equals(groupName, "Bar", StringComparison.OrdinalIgnoreCase)) return "Others";
        return string.IsNullOrWhiteSpace(groupName) ? "-" : groupName;
    }
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4>Menu Items</h4>
                    <div class="float-right">
                        <a asp-action="Create" class="btn btn-primary">
                            <i class="fa fa-plus"></i> Create New
                        </a>
                        <a asp-action="ExportCsv" class="btn btn-outline-secondary ms-2" title="Export CSV">
                            <i class="fas fa-file-csv"></i>
                        </a>
                        <a asp-action="Print" target="_blank" class="btn btn-outline-secondary ms-1" title="Print / PDF">
                            <i class="fas fa-print"></i>
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["SuccessMessage"]
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    }

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["ErrorMessage"]
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    }

                    <table id="menuItemsTable" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Item Code</th>
                                <th>Image</th>
                                <th>Name</th>
                                <th>Category</th>
                                <th>Item Group</th>
                                <th>Sub Category</th>
                                <th>Price</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.PLUCode</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.ImagePath))
                                        {
                                            <img src="@item.ImagePath" alt="@item.Name" style="max-width:50px; max-height:50px;" />
                                        }
                                        else
                                        {
                                            <i class="fa fa-image text-muted"></i>
                                        }
                                    </td>
                                    <td>@item.Name</td>
                                    <td>@item.Category?.Name</td>
                                    <td>@GetItemGroupDisplayName(item.MenuItemGroup?.ItemGroup)</td>
                                    <td>@(item.SubCategory?.Name ?? "-")</td>
                                    <td>
                                        <div class="small">
                                            <strong class="text-dark">Base:</strong> <strong class="text-success"><text>₹</text>@item.Price.ToString("N2")</strong>
                                            @if (item.TakeoutPrice.HasValue)
                                            {
                                                <br/><strong class="text-primary">B2C:</strong> <strong class="text-info"><text>₹</text>@item.TakeoutPrice.Value.ToString("N2")</strong>
                                            }
                                            @if (item.DeliveryPrice.HasValue)
                                            {
                                                <br/><strong class="text-warning">Delivery:</strong> <strong class="text-danger"><text>₹</text>@item.DeliveryPrice.Value.ToString("N2")</strong>
                                            }
                                            @if (item.RoomServicePrice.HasValue)
                                            {
                                                <br/><strong class="text-secondary">Room Service:</strong> <strong class="text-dark"><text>₹</text>@item.RoomServicePrice.Value.ToString("N2")</strong>
                                            }
                                        </div>
                                    </td>
                                    <td>
                                        @if (item.IsAvailable)
                                        {
                                            <span class="badge badge-success">Available</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-danger">Unavailable</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group">
                                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                                <i class="fa fa-info-circle"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">
                                                <i class="fa fa-edit"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                                <i class="fa fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#menuItemsTable').DataTable({
                "responsive": true,
                "lengthChange": true,
                "autoWidth": false,
                "pageLength": 25,
                "columns": [
                    null,                      // Item Code
                    { "orderable": false },   // Image
                    null,                      // Name
                    null,                      // Category
                    null,                      // Item Group
                    null,                      // Sub Category
                    null,                      // Price
                    null,                      // Status
                    { "orderable": false }    // Actions
                ]
            });
        });
    </script>
}
