@model RestaurantManagementSystem.ViewModels.RestaurantSettingsViewModel
@using RestaurantManagementSystem.Helpers
@{
    ViewData["Title"] = "Edit Restaurant Settings";
}

<link rel="stylesheet" href="~/css/settings.css" />

<div class="container-fluid px-4 settings-container">
    <h1 class="mt-4">Edit Restaurant Settings</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/Home/Index">Dashboard</a></li>
        <li class="breadcrumb-item"><a asp-action="Index">Restaurant Settings</a></li>
        <li class="breadcrumb-item active">Edit</li>
    </ol>

    <div class="settings-card mb-4">
        <div class="card-header">
            <i class="fas fa-edit me-1"></i>
            Update Restaurant Configuration
        </div>
        <div class="card-body p-4">
            <form asp-action="Edit" enctype="multipart/form-data" class="settings-form">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="LogoPath" />
                <input type="hidden" asp-for="CreatedAt" />
                <input type="hidden" asp-for="UpdatedAt" />

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <div class="row mb-4">
                    <div class="col-md-12">
                        <div class="settings-card">
                            <div class="card-header">
                                <i class="fas fa-building me-1"></i>
                                Basic Information
                            </div>
                            <div class="card-body">
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="RestaurantName" class="control-label"></label>
                                            <input asp-for="RestaurantName" class="form-control" placeholder="Enter restaurant name" />
                                            <span asp-validation-for="RestaurantName" class="field-validation-error"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="LogoFile" class="control-label"></label>
                                            <input asp-for="LogoFile" class="form-control" type="file" accept="image/*" />
                                            <span asp-validation-for="LogoFile" class="field-validation-error"></span>
                                            @if (!string.IsNullOrEmpty(Model.LogoPath))
                                            {
                                                <div class="mt-2 d-flex align-items-center">
                                                    <img src="@Model.LogoPath" alt="Current Logo" class="me-2" style="height: 40px; width: auto;">
                                                    <span class="text-muted">Current logo</span>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="settings-card h-100">
                            <div class="card-header">
                                <i class="fas fa-map-marker-alt me-1"></i>
                                Address Information
                            </div>
                            <div class="card-body">
                                <div class="form-group mb-3">
                                    <label asp-for="StreetAddress" class="control-label"></label>
                                    <input asp-for="StreetAddress" class="form-control" placeholder="Street address, building number" />
                                    <span asp-validation-for="StreetAddress" class="field-validation-error"></span>
                                </div>
                                
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="City" class="control-label"></label>
                                            <input asp-for="City" class="form-control" placeholder="City" />
                                            <span asp-validation-for="City" class="field-validation-error"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="State" class="control-label"></label>
                                            <input asp-for="State" class="form-control" placeholder="State" />
                                            <span asp-validation-for="State" class="field-validation-error"></span>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Pincode" class="control-label"></label>
                                            <input asp-for="Pincode" class="form-control" placeholder="6-digit pincode" />
                                            <span asp-validation-for="Pincode" class="field-validation-error"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Country" class="control-label"></label>
                                            <input asp-for="Country" class="form-control" placeholder="Country" />
                                            <span asp-validation-for="Country" class="field-validation-error"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="settings-card h-100">
                            <div class="card-header">
                                <i class="fas fa-address-card me-1"></i>
                                Contact Information
                            </div>
                            <div class="card-body">
                                <div class="form-group mb-3">
                                    <label asp-for="PhoneNumber" class="control-label"></label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-phone"></i></span>
                                        <input asp-for="PhoneNumber" class="form-control" placeholder="Phone number" />
                                    </div>
                                    <span asp-validation-for="PhoneNumber" class="field-validation-error"></span>
                                </div>
                                
                                <div class="form-group mb-3">
                                    <label asp-for="Email" class="control-label"></label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                        <input asp-for="Email" class="form-control" placeholder="Email address" />
                                    </div>
                                    <span asp-validation-for="Email" class="field-validation-error"></span>
                                </div>
                                
                                <div class="form-group mb-3">
                                    <label asp-for="Website" class="control-label"></label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-globe"></i></span>
                                        <input asp-for="Website" class="form-control" placeholder="Website URL (with http/https)" />
                                    </div>
                                    <span asp-validation-for="Website" class="field-validation-error"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="row mb-4">
                    <div class="col-md-12">
                        <div class="settings-card">
                            <div class="card-header">
                                <i class="fas fa-receipt me-1"></i>
                                Tax & Currency Settings
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group mb-3">
                                            <label asp-for="GSTCode" class="control-label"></label>
                                            <input asp-for="GSTCode" class="form-control" placeholder="27AAPFU0939F1ZV" />
                                            <span asp-validation-for="GSTCode" class="field-validation-error"></span>
                                            <div class="help-text">Format: 27AAPFU0939F1ZV</div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group mb-3">
                                            <label asp-for="FssaiNo" class="control-label"></label>
                                            <input asp-for="FssaiNo" class="form-control" placeholder="FSSAI License No" />
                                            <span asp-validation-for="FssaiNo" class="field-validation-error"></span>
                                            <div class="help-text">Enter FSSAI license number (optional)</div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group mb-3">
                                            <label asp-for="CurrencySymbol" class="control-label"></label>
                                            <div class="input-group">
                                                <span class="input-group-text"><i class="fas fa-rupee-sign"></i></span>
                                                <input asp-for="CurrencySymbol" class="form-control" value="₹" />
                                            </div>
                                            <span asp-validation-for="CurrencySymbol" class="field-validation-error"></span>
                                            <div class="help-text">Default: ₹ (Indian Rupee)</div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group mb-3">
                                            <label asp-for="DefaultGSTPercentage" class="control-label"></label>
                                            <div class="input-group">
                                                <input asp-for="DefaultGSTPercentage" class="form-control" />
                                                <span class="input-group-text">%</span>
                                            </div>
                                            <span asp-validation-for="DefaultGSTPercentage" class="field-validation-error"></span>
                                            <div class="help-text">Default GST rate for new menu items</div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group mb-3">
                                            <label asp-for="TakeAwayGSTPercentage" class="control-label"></label>
                                            <div class="input-group">
                                                <input asp-for="TakeAwayGSTPercentage" class="form-control" />
                                                <span class="input-group-text">%</span>
                                            </div>
                                            <span asp-validation-for="TakeAwayGSTPercentage" class="field-validation-error"></span>
                                            <div class="help-text">GST rate applied to take away orders</div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group mb-3">
                                            <label asp-for="BarGSTPerc" class="control-label"></label>
                                            <div class="input-group">
                                                <input asp-for="BarGSTPerc" class="form-control" />
                                                <span class="input-group-text">%</span>
                                            </div>
                                            <span asp-validation-for="BarGSTPerc" class="field-validation-error"></span>
                                            <div class="help-text">GST rate applied to bar items</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="row mb-4">
                    <div class="col-md-12">
                        <div class="settings-card">
                            <div class="card-header">
                                <i class="fas fa-cogs me-1"></i>
                                Parameter Setup
                            </div>
                            <div class="card-body">
                                <div class="row mb-3">
                                    <div class="col-md-4">
                                        <div class="form-group mb-3">
                                            <label asp-for="IsDefaultGSTRequired" class="control-label"></label>
                                            <div class="form-check form-switch">
                                                <input asp-for="IsDefaultGSTRequired" class="form-check-input" type="checkbox" id="isDefaultGSTRequired">
                                                <label class="form-check-label" for="isDefaultGSTRequired">
                                                    Enable default GST calculation
                                                </label>
                                            </div>
                                            <span asp-validation-for="IsDefaultGSTRequired" class="field-validation-error"></span>
                                            <div class="help-text">Controls whether GST is automatically calculated by default</div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group mb-3">
                                            <label asp-for="IsTakeAwayGSTRequired" class="control-label"></label>
                                            <div class="form-check form-switch">
                                                <input asp-for="IsTakeAwayGSTRequired" class="form-check-input" type="checkbox" id="isTakeAwayGSTRequired">
                                                <label class="form-check-label" for="isTakeAwayGSTRequired">
                                                    Enable take away GST calculation
                                                </label>
                                            </div>
                                            <span asp-validation-for="IsTakeAwayGSTRequired" class="field-validation-error"></span>
                                            <div class="help-text">Controls whether GST is calculated for take away orders</div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group mb-3">
                                            <label asp-for="IsTakeawayIncludedGSTReq" class="control-label"></label>
                                            <div class="form-check form-switch">
                                                <input asp-for="IsTakeawayIncludedGSTReq" class="form-check-input" type="checkbox" id="isTakeawayIncludedGSTReq">
                                                <label class="form-check-label" for="isTakeawayIncludedGSTReq">
                                                    Take Away GST Included Required
                                                </label>
                                            </div>
                                            <span asp-validation-for="IsTakeawayIncludedGSTReq" class="field-validation-error"></span>
                                            <div class="help-text">When enabled, take-away items are treated as GST-included by default</div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group mb-3">
                                            <label asp-for="BillFormat" class="control-label"></label>
                                            <select asp-for="BillFormat" class="form-select">
                                                <option value="A4">A4 Format</option>
                                                <option value="POS">POS Format</option>
                                            </select>
                                            <span asp-validation-for="BillFormat" class="field-validation-error"></span>
                                            <div class="help-text">Choose the format for printing bills and receipts</div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group mb-3">
                                            <label asp-for="SelectedOrderTypeIds" class="control-label">Choose Order Type</label>
                                            <select asp-for="SelectedOrderTypeIds" class="form-select" multiple size="4">
                                                @foreach (var ot in OrderTypeHelper.GetOrderTypes())
                                                {
                                                    <option value="@ot.Id" selected="@(Model.SelectedOrderTypeIds != null && Model.SelectedOrderTypeIds.Contains(ot.Id) ? "selected" : null)">@ot.Name</option>
                                                }
                                            </select>
                                            <span asp-validation-for="SelectedOrderTypeIds" class="field-validation-error"></span>
                                            <div class="help-text">Controls which order types appear on the Create Order page</div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group mb-3">
                                            <label asp-for="IsDiscountApprovalRequired" class="control-label"></label>
                                            <div class="form-check form-switch">
                                                <input asp-for="IsDiscountApprovalRequired" class="form-check-input" type="checkbox" id="isDiscountApprovalRequired">
                                                <label class="form-check-label" for="isDiscountApprovalRequired">
                                                    Require approval for discounts
                                                </label>
                                            </div>
                                            <span asp-validation-for="IsDiscountApprovalRequired" class="field-validation-error"></span>
                                            <div class="help-text">When enabled, discounts require manager approval</div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group mb-3">
                                            <label asp-for="IsCardPaymentApprovalRequired" class="control-label"></label>
                                            <div class="form-check form-switch">
                                                <input asp-for="IsCardPaymentApprovalRequired" class="form-check-input" type="checkbox" id="isCardPaymentApprovalRequired">
                                                <label class="form-check-label" for="isCardPaymentApprovalRequired">
                                                    Require approval for card payments
                                                </label>
                                            </div>
                                            <span asp-validation-for="IsCardPaymentApprovalRequired" class="field-validation-error"></span>
                                            <div class="help-text">When enabled, card payments over configured limits require approval</div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group mb-3">
                                            <label asp-for="IsKOTBillPrintRequired" class="control-label"></label>
                                            <div class="form-check form-switch">
                                                <input asp-for="IsKOTBillPrintRequired" class="form-check-input" type="checkbox" id="isKOTBillPrintRequired">
                                                <label class="form-check-label" for="isKOTBillPrintRequired">
                                                    KOT bill print required
                                                </label>
                                            </div>
                                            <span asp-validation-for="IsKOTBillPrintRequired" class="field-validation-error"></span>
                                            <div class="help-text">When enabled, KOT (Kitchen Order Ticket) bills will be printed as part of order processing</div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group mb-3">
                                            <label asp-for="IsReqAutoSentbillEmail" class="control-label"></label>
                                            <div class="form-check form-switch">
                                                <input asp-for="IsReqAutoSentbillEmail" class="form-check-input" type="checkbox" id="isReqAutoSentbillEmail">
                                                <label class="form-check-label" for="isReqAutoSentbillEmail">
                                                    Automatic bill send email
                                                </label>
                                            </div>
                                            <span asp-validation-for="IsReqAutoSentbillEmail" class="field-validation-error"></span>
                                            <div class="help-text">When enabled, bills will be automatically sent to customer email after order completion</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="settings-actions">
                    <a asp-action="Index" class="btn btn-outline-secondary btn-settings">
                        <i class="fas fa-arrow-left"></i> Back to Settings
                    </a>
                    <button type="submit" class="btn btn-primary btn-settings">
                        <i class="fas fa-save"></i> Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Preview selected image
        $(document).ready(function() {
            $('#LogoFile').change(function() {
                var file = this.files[0];
                if (file) {
                    var reader = new FileReader();
                    reader.onload = function(e) {
                        // If we don't already have a preview container, create one
                        if ($('#logoPreviewContainer').length === 0) {
                            var previewHtml = '<div id="logoPreviewContainer" class="mt-2"><img id="logoPreview" src="" alt="Logo Preview" class="img-thumbnail" style="max-height: 100px"></div>';
                            $(previewHtml).insertAfter($('#LogoFile').parent());
                        }
                        $('#logoPreview').attr('src', e.target.result);
                        $('#logoPreviewContainer').show();
                    }
                    reader.readAsDataURL(file);
                }
            });
            
            // Add floating label effect
            $('.form-control').focus(function() {
                $(this).closest('.form-group').addClass('focused');
            }).blur(function() {
                $(this).closest('.form-group').removeClass('focused');
            });
        });
    </script>
}