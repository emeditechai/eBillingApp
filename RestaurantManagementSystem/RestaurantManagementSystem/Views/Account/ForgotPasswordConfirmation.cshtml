@{
    ViewData["Title"] = "Check Your Email";
    Layout = "_AuthLayout";
}

<div class="login-container">
    <div class="login-card">
        <div class="login-header">
            <div class="login-logo-text">eRestoPOS</div>
            <h2>Check your email</h2>
            <p>If an account exists for that email, a password reset link has been sent.</p>
        </div>

        <div class="login-form">
            <div class="alert alert-info">
                The reset link will expire in 1 hour.
            </div>

            <div class="text-center mt-3">
                <a asp-action="Login" asp-controller="Account" class="btn btn-primary btn-block">Back to Login</a>
            </div>
        </div>
    </div>
</div>
