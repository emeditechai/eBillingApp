@model RestaurantManagementSystem.Models.EmailTemplate
@{
    ViewData["Title"] = Model.EmailTemplateID == 0 ? "Create Email Template" : "Edit Email Template";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var isEdit = Model.EmailTemplateID > 0;
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2>
                <i class="fas fa-envelope-open-text me-2"></i>
                @(isEdit ? "Edit" : "Create") Email Template
            </h2>
            <p class="text-muted">@(isEdit ? "Modify" : "Create") email template for automated campaigns</p>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form asp-action="@(isEdit ? "Edit" : "Create")" method="post">
                        @if (isEdit)
                        {
                            <input type="hidden" asp-for="EmailTemplateID" />
                        }
                        
                        <div class="mb-3">
                            <label asp-for="TemplateName" class="form-label">Template Name <span class="text-danger">*</span></label>
                            <input asp-for="TemplateName" class="form-control" required />
                            <span asp-validation-for="TemplateName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="TemplateType" class="form-label">Template Type <span class="text-danger">*</span></label>
                            <select asp-for="TemplateType" class="form-select" required>
                                <option value="">-- Select Type --</option>
                                <option value="Birthday">Birthday</option>
                                <option value="Anniversary">Anniversary</option>
                                <option value="Custom">Custom</option>
                                <option value="Promotional">Promotional</option>
                            </select>
                            <span asp-validation-for="TemplateType" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Subject" class="form-label">Email Subject <span class="text-danger">*</span></label>
                            <input asp-for="Subject" class="form-control" required />
                            <small class="form-text text-muted">
                                Available placeholders: {GuestName}, {RestaurantName}, {Year}, {Age}, {Years}
                            </small>
                            <span asp-validation-for="Subject" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="BodyHtml" class="form-label">Email Body (HTML) <span class="text-danger">*</span></label>
                            <textarea asp-for="BodyHtml" class="form-control" rows="15" required></textarea>
                            <small class="form-text text-muted">
                                You can use HTML formatting. Placeholders: {GuestName}, {RestaurantName}, {Year}, {Age}, {Years}
                            </small>
                            <span asp-validation-for="BodyHtml" class="text-danger"></span>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-check">
                                    <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                                    <label asp-for="IsActive" class="form-check-label">
                                        Active
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-check">
                                    <input asp-for="IsDefault" class="form-check-input" type="checkbox" />
                                    <label asp-for="IsDefault" class="form-check-label">
                                        Set as Default Template
                                    </label>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>@(isEdit ? "Update" : "Create") Template
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times me-2"></i>Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm mb-3">
                <div class="card-header bg-info text-white">
                    <h6 class="mb-0"><i class="fas fa-info-circle me-2"></i>Template Help</h6>
                </div>
                <div class="card-body">
                    <h6>Available Placeholders:</h6>
                    <ul class="small">
                        <li><code>{GuestName}</code> - Guest's name</li>
                        <li><code>{RestaurantName}</code> - Your restaurant name</li>
                        <li><code>{Year}</code> - Current year</li>
                        <li><code>{Age}</code> - Guest's age (Birthday only)</li>
                        <li><code>{Years}</code> - Anniversary years (Anniversary only)</li>
                    </ul>

                    <h6 class="mt-3">Template Types:</h6>
                    <ul class="small">
                        <li><strong>Birthday:</strong> Auto-sent on guest birthdays</li>
                        <li><strong>Anniversary:</strong> Auto-sent on anniversaries</li>
                        <li><strong>Custom:</strong> For manual campaigns</li>
                        <li><strong>Promotional:</strong> For marketing campaigns</li>
                    </ul>
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-header bg-warning">
                    <h6 class="mb-0"><i class="fas fa-code me-2"></i>HTML Example</h6>
                </div>
                <div class="card-body">
                    <pre class="small mb-0" style="font-size: 11px;"><code>&lt;html&gt;
&lt;body style="font-family: Arial;"&gt;
  &lt;h1&gt;Hello {GuestName}!&lt;/h1&gt;
  &lt;p&gt;Special offer for you...&lt;/p&gt;
  &lt;p&gt;From {RestaurantName}&lt;/p&gt;
&lt;/body&gt;
&lt;/html&gt;</code></pre>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
