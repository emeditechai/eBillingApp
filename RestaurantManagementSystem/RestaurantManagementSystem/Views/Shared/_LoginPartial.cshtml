@using System.Security.Claims
@using RestaurantManagementSystem.Utilities

@{
    var activeRoleName = User?.FindFirst("ActiveRoleName")?.Value ?? "Not Selected";
    var hasMultipleRoles = User?.FindFirst("HasMultipleRoles")?.Value == "true";
    var preferredName = User?.FindFirst(ClaimTypes.GivenName)?.Value;
    var lastName = User?.FindFirst(ClaimTypes.Surname)?.Value;
    var userName = User?.Identity?.Name ?? "User";

    var displayName = string.IsNullOrWhiteSpace(preferredName) ? userName : preferredName;
    var initials = string.Empty;

    if (!string.IsNullOrWhiteSpace(preferredName))
    {
        initials += preferredName.Trim()[0];
    }

    if (!string.IsNullOrWhiteSpace(lastName))
    {
        initials += lastName.Trim()[0];
    }

    if (string.IsNullOrWhiteSpace(initials) && !string.IsNullOrWhiteSpace(userName))
    {
        initials = userName.Trim()[0].ToString();
    }

    initials = initials.ToUpperInvariant();
}

<ul class="navbar-nav">
@if (User.Identity.IsAuthenticated)
{
    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle text-white user-menu-trigger" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            <span class="user-menu-avatar">@initials</span>
            <span class="user-menu-details">
                <span class="user-menu-name">@displayName</span>
                <span class="user-menu-role">@activeRoleName</span>
            </span>
            @if (hasMultipleRoles)
            {
                <span class="user-menu-dot" title="Multiple roles available"></span>
            }
        </a>
        <ul class="dropdown-menu dropdown-menu-end shadow-lg" aria-labelledby="navbarDropdown" style="border-top: 2px solid #f8b133; font-size: 0.85rem;">
            <li>
                <span class="dropdown-item-text py-1">
                    <strong>@User.FindFirst(ClaimTypes.Name)?.Value</strong><br />
                    <small class="text-muted">@User.FindFirst(ClaimTypes.Email)?.Value</small>
                </span>
            </li>
            <li>
                <span class="dropdown-item-text py-1">
                    <small class="text-muted text-uppercase">Active Role</small><br />
                    <span class="fw-semibold">@activeRoleName</span>
                </span>
            </li>
            @if (hasMultipleRoles)
            {
                <li>
                    <a class="dropdown-item py-1" href="#" data-role-switch-trigger>
                        <i class="fas fa-random compact-icon text-purple"></i> Switch Role
                    </a>
                </li>
            }
            <li><hr class="dropdown-divider my-1"></li>
            <li>
                <a class="dropdown-item py-1" asp-controller="Account" asp-action="ChangePassword">
                    <i class="fas fa-key compact-icon text-primary"></i> Change Password
                </a>
            </li>
            @if (User.IsInRole("Administrator"))
            {
                <li>
                    <a class="dropdown-item py-1" asp-controller="User" asp-action="UserList">
                        <i class="fas fa-users compact-icon text-primary"></i> User Management
                    </a>
                </li>
            }
            <li><hr class="dropdown-divider my-1"></li>
            <li>
                <form asp-controller="Account" asp-action="Logout" method="post" id="logoutForm">
                    <button type="submit" class="dropdown-item py-1">
                        <i class="fas fa-sign-out-alt compact-icon text-danger"></i> Logout
                    </button>
                </form>
            </li>
        </ul>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-white" asp-controller="Account" asp-action="Register">
            <i class="fas fa-user-plus compact-icon"></i> Register
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link btn btn-sm btn-primary text-white px-3" asp-controller="Account" asp-action="Login">
            <i class="fas fa-sign-in-alt me-1"></i> Login
        </a>
    </li>
}
</ul>
