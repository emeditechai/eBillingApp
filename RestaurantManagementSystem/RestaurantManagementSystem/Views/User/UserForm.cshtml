@model RestaurantManagementSystem.Models.User
@{
    ViewData["Title"] = Model.Id == 0 ? "Create User" : ((ViewBag.IsView ?? false) ? "View User" : "Edit User");
    bool isView = ViewBag.IsView ?? false;
}

<div class="container-fluid py-3" style="background: #f0f2f5; min-height: 100vh;">
    <div class="row justify-content-center">
        <div class="col-xl-7 col-lg-9 col-md-10">
            <div class="card border-0 shadow-sm rounded-3">
                <!-- Header -->
                <div class="card-header text-white py-3 px-4 border-0" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-person-circle me-3" style="font-size: 2rem;"></i>
                        <div>
                            <h4 class="mb-0 fw-bold">@ViewData["Title"]</h4>
                            <small class="opacity-75">@(Model.Id == 0 ? "Create a new user account" : "Update user information")</small>
                        </div>
                    </div>
                </div>

                <!-- Body -->
                <div class="card-body p-4" style="background: #ffffff;">
                    @if (TempData["ResultMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
                            <i class="bi bi-check-circle-fill me-2"></i>
                            @TempData["ResultMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>
                            <strong>Please correct the following errors:</strong>
                            <ul class="mb-0 mt-2 small">
                                @foreach (var entry in ViewData.ModelState)
                                {
                                    foreach (var error in entry.Value.Errors)
                                    {
                                        <li>@error.ErrorMessage</li>
                                    }
                                }
                            </ul>
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-action="SaveUser" method="post" id="userForm" autocomplete="off" novalidate>
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="Id" />

                        <!-- Account Information Section -->
                        <div class="card border-0 shadow-sm mb-3">
                            <div class="card-header bg-white border-bottom py-2 px-3">
                                <h6 class="mb-0 text-primary fw-semibold">
                                    <i class="bi bi-person-badge me-2"></i>Account Information
                                </h6>
                            </div>
                            <div class="card-body p-3">
                                <div class="row g-2">
                                    <div class="col-md-6">
                                        <label asp-for="Username" class="form-label small fw-semibold mb-1">
                                            Username <span class="text-danger">*</span>
                                        </label>
                                        @if (isView)
                                        {
                                            <input asp-for="Username" class="form-control" disabled />
                                            <input type="hidden" name="Username" value="@Model.Username" />
                                        }
                                        else
                                        {
                                            <div class="input-group">
                                                <span class="input-group-text bg-light"><i class="bi bi-person"></i></span>
                                                <input asp-for="Username" class="form-control" placeholder="Enter username" required maxlength="50" />
                                            </div>
                                            <span asp-validation-for="Username" class="text-danger small"></span>
                                        }
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="Email" class="form-label small fw-semibold mb-1">
                                            Email
                                        </label>
                                        @if (isView)
                                        {
                                            <input asp-for="Email" class="form-control" type="email" disabled />
                                            <input type="hidden" name="Email" value="@Model.Email" />
                                        }
                                        else
                                        {
                                            <div class="input-group">
                                                <span class="input-group-text bg-light"><i class="bi bi-envelope"></i></span>
                                                <input asp-for="Email" class="form-control" type="email" placeholder="user@example.com" maxlength="100" />
                                            </div>
                                            <span asp-validation-for="Email" class="text-danger small"></span>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Personal Information Section -->
                        <div class="card border-0 shadow-sm mb-3">
                            <div class="card-header bg-white border-bottom py-2 px-3">
                                <h6 class="mb-0 text-primary fw-semibold">
                                    <i class="bi bi-person-lines-fill me-2"></i>Personal Information
                                </h6>
                            </div>
                            <div class="card-body p-3">
                                <div class="row g-2">
                                    <div class="col-md-6">
                                        <label asp-for="FirstName" class="form-label small fw-semibold mb-1">
                                            First Name <span class="text-danger">*</span>
                                        </label>
                                        @if (isView)
                                        {
                                            <input asp-for="FirstName" class="form-control" disabled />
                                            <input type="hidden" name="FirstName" value="@Model.FirstName" />
                                        }
                                        else
                                        {
                                            <div class="input-group">
                                                <span class="input-group-text bg-light"><i class="bi bi-card-text"></i></span>
                                                <input asp-for="FirstName" class="form-control" placeholder="Enter first name" required maxlength="50" />
                                            </div>
                                            <span asp-validation-for="FirstName" class="text-danger small"></span>
                                        }
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="LastName" class="form-label small fw-semibold mb-1">
                                            Last Name
                                        </label>
                                        @if (isView)
                                        {
                                            <input asp-for="LastName" class="form-control" disabled />
                                            <input type="hidden" name="LastName" value="@Model.LastName" />
                                        }
                                        else
                                        {
                                            <div class="input-group">
                                                <span class="input-group-text bg-light"><i class="bi bi-card-text"></i></span>
                                                <input asp-for="LastName" class="form-control" placeholder="Enter last name" maxlength="50" />
                                            </div>
                                            <span asp-validation-for="LastName" class="text-danger small"></span>
                                        }
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="Phone" class="form-label small fw-semibold mb-1">
                                            Phone Number
                                        </label>
                                        @if (isView)
                                        {
                                            <input asp-for="Phone" class="form-control" disabled />
                                            <input type="hidden" name="Phone" value="@Model.Phone" />
                                        }
                                        else
                                        {
                                            <div class="input-group">
                                                <span class="input-group-text bg-light"><i class="bi bi-telephone"></i></span>
                                                <input asp-for="Phone" class="form-control" placeholder="Enter phone number" maxlength="20" />
                                            </div>
                                            <span asp-validation-for="Phone" class="text-danger small"></span>
                                        }
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="SelectedRoleIds" class="form-label small fw-semibold mb-1">
                                            User Roles
                                        </label>
                                        @if (isView)
                                        {
                                            <select class="form-select" multiple disabled style="height: 100px;">
                                                @foreach (var role in ViewBag.AllRoles)
                                                {
                                                    <option value="@role.Id" selected="@(Model.SelectedRoleIds?.Contains(role.Id) ?? false)">@role.Name</option>
                                                }
                                            </select>
                                            @if (Model.SelectedRoleIds != null)
                                            {
                                                foreach (var roleId in Model.SelectedRoleIds)
                                                {
                                                    <input type="hidden" name="selectedRoles" value="@roleId" />
                                                }
                                            }
                                        }
                                        else
                                        {
                                            <select name="selectedRoles" class="form-select" multiple style="height: 100px;">
                                                @foreach (var role in ViewBag.AllRoles)
                                                {
                                                    <option value="@role.Id" selected="@(Model.SelectedRoleIds?.Contains(role.Id) ?? false)">@role.Name</option>
                                                }
                                            </select>
                                            <small class="text-muted">Hold Ctrl/Cmd to select multiple</small>
                                        }
                                        <span asp-validation-for="SelectedRoleIds" class="text-danger small"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Security Section -->
                        @if (!isView)
                        {
                            <div class="card border-0 shadow-sm mb-3">
                                <div class="card-header bg-white border-bottom py-2 px-3">
                                    <h6 class="mb-0 text-primary fw-semibold">
                                        <i class="bi bi-shield-lock me-2"></i>Security
                                    </h6>
                                </div>
                                <div class="card-body p-3">
                                    <div class="row g-2">
                                        <div class="col-md-6">
                                            <label for="password" class="form-label small fw-semibold mb-1">
                                                Password @if (Model.Id == 0) { <span class="text-danger">*</span> }
                                            </label>
                                            @if (Model.Id == 0)
                                            {
                                                <div class="input-group">
                                                    <span class="input-group-text bg-light"><i class="bi bi-lock"></i></span>
                                                    <input asp-for="Password" id="password" name="password" class="form-control" type="password" placeholder="Enter password" maxlength="100" required />
                                                    <button class="btn btn-outline-secondary" type="button" id="togglePassword">
                                                        <i class="bi bi-eye" id="togglePasswordIcon"></i>
                                                    </button>
                                                </div>
                                                <div class="mt-1">
                                                    <div class="progress" style="height: 4px;">
                                                        <div class="progress-bar" id="passwordStrength" role="progressbar" style="width: 0%"></div>
                                                    </div>
                                                    <small class="text-muted" id="passwordStrengthText">Min 8 characters</small>
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="input-group">
                                                    <span class="input-group-text bg-light"><i class="bi bi-lock"></i></span>
                                                    <input asp-for="Password" id="password" name="password" class="form-control" type="password" placeholder="Leave blank to keep current" maxlength="100" disabled />
                                                    <button type="button" class="btn btn-outline-primary" id="enablePasswordBtn">
                                                        <i class="bi bi-pencil"></i> Change
                                                    </button>
                                                </div>
                                                <small class="form-text text-muted">Leave blank to keep current password</small>
                                            }
                                            <span asp-validation-for="Password" class="text-danger small"></span>
                                            <div class="invalid-feedback" id="passwordFeedback"></div>
                                        </div>
                                        <div class="col-md-6">
                                            <label asp-for="ConfirmPassword" class="form-label small fw-semibold mb-1">
                                                Confirm Password @if (Model.Id == 0) { <span class="text-danger">*</span> }
                                            </label>
                                            <div class="input-group">
                                                <span class="input-group-text bg-light"><i class="bi bi-lock-fill"></i></span>
                                                @if (Model.Id == 0)
                                                {
                                                    <input asp-for="ConfirmPassword" id="confirmPassword" class="form-control" type="password" placeholder="Re-enter password" maxlength="100" required />
                                                }
                                                else
                                                {
                                                    <input asp-for="ConfirmPassword" id="confirmPassword" class="form-control" type="password" placeholder="Re-enter password" maxlength="100" />
                                                }
                                                <button class="btn btn-outline-secondary" type="button" id="toggleConfirmPassword">
                                                    <i class="bi bi-eye" id="toggleConfirmPasswordIcon"></i>
                                                </button>
                                            </div>
                                            <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                                            <div class="invalid-feedback" id="confirmPasswordFeedback"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }

                        <!-- Status Section -->
                        <div class="card border-0 shadow-sm mb-3">
                            <div class="card-header bg-white border-bottom py-2 px-3">
                                <h6 class="mb-0 text-primary fw-semibold">
                                    <i class="bi bi-toggles me-2"></i>Status
                                </h6>
                            </div>
                            <div class="card-body p-3">
                                <div class="form-check form-switch">
                                    @if (isView)
                                    {
                                        <input asp-for="IsActive" class="form-check-input" style="width: 2.5rem; height: 1.25rem; cursor: pointer;" disabled />
                                        <input type="hidden" name="IsActive" value="@(Model.IsActive ? "true" : "false")" />
                                    }
                                    else
                                    {
                                        <input asp-for="IsActive" class="form-check-input" style="width: 2.5rem; height: 1.25rem; cursor: pointer;" />
                                    }
                                    <label asp-for="IsActive" class="form-check-label ms-2 fw-semibold">
                                        Account Active
                                        <small class="text-muted d-block fw-normal">Enable or disable user access</small>
                                    </label>
                                </div>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-flex justify-content-between align-items-center mt-3">
                            <a asp-action="UserList" class="btn btn-outline-secondary rounded-pill px-4">
                                <i class="bi bi-arrow-left me-1"></i>Back
                            </a>
                            @if (!isView)
                            {
                                <button type="submit" class="btn btn-primary rounded-pill px-5 shadow" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border: none;">
                                    <i class="bi bi-check-circle me-1"></i>Save User
                                </button>
                            }
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    
    <style>
        .form-control:focus, .form-select:focus {
            box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
            border-color: #667eea;
        }
        
        .form-check-input:checked {
            background-color: #667eea;
            border-color: #667eea;
        }
        
        .form-switch-lg .form-check-input {
            cursor: pointer;
        }
        
        .is-invalid {
            border-color: #dc3545 !important;
        }
        
        .is-valid {
            border-color: #28a745 !important;
        }
        
        .invalid-feedback {
            display: block;
        }
    </style>

    <script>
        $(document).ready(function() {
            const passwordInput = $('#password');
            const confirmPasswordInput = $('#confirmPassword');
            const form = $('#userForm');
            const isEditMode = @(Model.Id != 0 ? "true" : "false");
            
            // Toggle password visibility
            $('#togglePassword').on('click', function() {
                const type = passwordInput.attr('type') === 'password' ? 'text' : 'password';
                passwordInput.attr('type', type);
                $('#togglePasswordIcon').toggleClass('bi-eye bi-eye-slash');
            });
            
            $('#toggleConfirmPassword').on('click', function() {
                const type = confirmPasswordInput.attr('type') === 'password' ? 'text' : 'password';
                confirmPasswordInput.attr('type', type);
                $('#toggleConfirmPasswordIcon').toggleClass('bi-eye bi-eye-slash');
            });
            
            // Enable password change for edit mode
            $('#enablePasswordBtn').on('click', function() {
                passwordInput.prop('disabled', false);
                passwordInput.focus();
                passwordInput.attr('required', 'required');
                confirmPasswordInput.attr('required', 'required');
                $(this).html('<i class="bi bi-lock"></i> Lock').removeClass('btn-outline-primary').addClass('btn-outline-danger');
                $(this).off('click').on('click', function() {
                    passwordInput.prop('disabled', true);
                    passwordInput.val('');
                    confirmPasswordInput.val('');
                    passwordInput.removeAttr('required');
                    confirmPasswordInput.removeAttr('required');
                    $(this).html('<i class="bi bi-pencil"></i> Change').removeClass('btn-outline-danger').addClass('btn-outline-primary');
                    passwordInput.removeClass('is-invalid is-valid');
                    confirmPasswordInput.removeClass('is-invalid is-valid');
                    $('#passwordFeedback').text('');
                    $('#confirmPasswordFeedback').text('');
                    $('#passwordStrength').css('width', '0%').removeClass('bg-danger bg-warning bg-info bg-success');
                    $('#passwordStrengthText').text('');
                });
            });
            
            // Password strength indicator
            function updatePasswordStrength(password) {
                if (!password) {
                    $('#passwordStrength').css('width', '0%').removeClass('bg-danger bg-warning bg-info bg-success');
                    $('#passwordStrengthText').text('Password must be at least 8 characters');
                    return;
                }
                
                let strength = 0;
                if (password.length >= 8) strength++;
                if (password.length >= 12) strength++;
                if (/[a-z]/.test(password) && /[A-Z]/.test(password)) strength++;
                if (/\d/.test(password)) strength++;
                if (/[^a-zA-Z0-9]/.test(password)) strength++;
                
                const strengthBar = $('#passwordStrength');
                const strengthText = $('#passwordStrengthText');
                
                strengthBar.removeClass('bg-danger bg-warning bg-info bg-success');
                
                if (strength <= 1) {
                    strengthBar.css('width', '20%').addClass('bg-danger');
                    strengthText.text('Weak password').css('color', '#dc3545');
                } else if (strength === 2) {
                    strengthBar.css('width', '40%').addClass('bg-warning');
                    strengthText.text('Fair password').css('color', '#ffc107');
                } else if (strength === 3) {
                    strengthBar.css('width', '60%').addClass('bg-info');
                    strengthText.text('Good password').css('color', '#17a2b8');
                } else if (strength === 4) {
                    strengthBar.css('width', '80%').addClass('bg-success');
                    strengthText.text('Strong password').css('color', '#28a745');
                } else {
                    strengthBar.css('width', '100%').addClass('bg-success');
                    strengthText.text('Very strong password').css('color', '#28a745');
                }
            }
            
            // Real-time password validation
            passwordInput.on('input', function() {
                const password = $(this).val();
                const confirmPassword = confirmPasswordInput.val();
                
                updatePasswordStrength(password);
                
                // Validate password length
                if (password.length > 0 && password.length < 8) {
                    $(this).addClass('is-invalid').removeClass('is-valid');
                    $('#passwordFeedback').text('Password must be at least 8 characters long');
                } else if (password.length >= 8) {
                    $(this).addClass('is-valid').removeClass('is-invalid');
                    $('#passwordFeedback').text('');
                } else {
                    $(this).removeClass('is-invalid is-valid');
                    $('#passwordFeedback').text('');
                }
                
                // Check confirm password match
                if (confirmPassword && password !== confirmPassword) {
                    confirmPasswordInput.addClass('is-invalid').removeClass('is-valid');
                    $('#confirmPasswordFeedback').text('Passwords do not match');
                } else if (confirmPassword && password === confirmPassword) {
                    confirmPasswordInput.addClass('is-valid').removeClass('is-invalid');
                    $('#confirmPasswordFeedback').text('');
                }
            });
            
            // Real-time confirm password validation
            confirmPasswordInput.on('input', function() {
                const password = passwordInput.val();
                const confirmPassword = $(this).val();
                
                if (confirmPassword === '') {
                    $(this).removeClass('is-invalid is-valid');
                    $('#confirmPasswordFeedback').text('');
                } else if (password !== confirmPassword) {
                    $(this).addClass('is-invalid').removeClass('is-valid');
                    $('#confirmPasswordFeedback').text('Passwords do not match');
                } else {
                    $(this).addClass('is-valid').removeClass('is-invalid');
                    $('#confirmPasswordFeedback').text('');
                }
            });
            
            // Form submission validation
            form.on('submit', function(e) {
                let isValid = true;
                
                // Check required fields
                const username = $('#Username').val().trim();
                const firstName = $('#FirstName').val().trim();
                
                if (!username) {
                    $('#Username').addClass('is-invalid');
                    isValid = false;
                } else {
                    $('#Username').removeClass('is-invalid');
                }
                
                if (!firstName) {
                    $('#FirstName').addClass('is-invalid');
                    isValid = false;
                } else {
                    $('#FirstName').removeClass('is-invalid');
                }
                
                // Password validation for new users or when changing password
                if (!passwordInput.prop('disabled')) {
                    const password = passwordInput.val();
                    const confirmPassword = confirmPasswordInput.val();
                    
                    if (!isEditMode || password) {
                        // For new users or editing password
                        if (!password || password.length < 8) {
                            passwordInput.addClass('is-invalid');
                            $('#passwordFeedback').text('Password is required and must be at least 8 characters');
                            isValid = false;
                        }
                        
                        if (!confirmPassword) {
                            confirmPasswordInput.addClass('is-invalid');
                            $('#confirmPasswordFeedback').text('Please confirm your password');
                            isValid = false;
                        } else if (password !== confirmPassword) {
                            confirmPasswordInput.addClass('is-invalid');
                            $('#confirmPasswordFeedback').text('Passwords do not match');
                            isValid = false;
                        }
                    }
                }
                
                if (!isValid) {
                    e.preventDefault();
                    
                    // Scroll to first error
                    $('html, body').animate({
                        scrollTop: $('.is-invalid').first().offset().top - 100
                    }, 500);
                    
                    // Show alert
                    if ($('.alert-danger').length === 0) {
                        const alertHtml = `
                            <div class="alert alert-danger alert-dismissible fade show rounded-3 shadow-sm" role="alert">
                                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                                <strong>Please correct the validation errors before submitting.</strong>
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        `;
                        $(alertHtml).insertAfter('.card-header');
                    }
                    
                    return false;
                }
            });
            
            // Clear invalid state on input
            $('.form-control').on('input', function() {
                if ($(this).val().trim()) {
                    $(this).removeClass('is-invalid');
                }
            });
        });
    </script>
}
