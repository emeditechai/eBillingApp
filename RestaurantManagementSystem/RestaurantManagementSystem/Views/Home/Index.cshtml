    <script>
        (function(){
            function pad(n){ return n<10 ? '0'+n : ''+n; }
            function format12h(h){ return h%12 === 0 ? 12 : h%12; }
            function updateClock(){
                const now = new Date();
                const yyyy = now.getFullYear();
                const monthNames = ['Jan','Feb','Mar','Apr','May','Jun','Jul','Aug','Sep','Oct','Nov','Dec'];
                const dd = pad(now.getDate());
                const dateStr = `${dd} ${monthNames[now.getMonth()]} ${yyyy}`;
                const hh12 = format12h(now.getHours());
                const ampm = now.getHours() >= 12 ? 'PM' : 'AM';
                const timeStr = `${pad(hh12)}:${pad(now.getMinutes())}:${pad(now.getSeconds())} ${ampm}`;
                const dEl = document.getElementById('liveDate');
