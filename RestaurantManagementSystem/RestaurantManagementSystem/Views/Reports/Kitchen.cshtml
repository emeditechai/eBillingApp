@model RestaurantManagementSystem.Models.KitchenReportViewModel

@{
    ViewData["Title"] = "Kitchen KOT Report";
}

<div class="container-fluid">
    <style>
        .report-tile { border-radius: 8px; color: #fff; min-height: 120px; display:block; }
        .report-tile .tile-body { padding: 16px; }
        .tile-red { background: linear-gradient(135deg,#ff6b6b 0%,#ff4d4d 100%); }
        .tile-orange { background: linear-gradient(135deg,#ffb86b 0%,#ff974d 100%); }
        .tile-green { background: linear-gradient(135deg,#34c47a 0%,#0fb07a 100%); }
        .tile-blue { background: linear-gradient(135deg,#4f93ff 0%,#2b6de9 100%); }
        .kot-table thead { background:#fff; }
        .kot-table tbody tr td { vertical-align: middle; }
        @@media (max-width:767px) { .report-tile { min-height:100px; } }
    </style>
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-hamburger me-2"></i>Kitchen (KOT) Report</h2>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0">
                        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="breadcrumb-item">Reports</li>
                        <li class="breadcrumb-item active">Kitchen</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>

    <form method="get" asp-action="Kitchen" class="row g-3 align-items-end mb-4">
        <div class="col-auto">
            <label class="form-label">From</label>
            <input name="from" type="date" class="form-control" value="@Model.Filter.FromDate?.ToString("yyyy-MM-dd")" />
        </div>
        <div class="col-auto">
            <label class="form-label">To</label>
            <input name="to" type="date" class="form-control" value="@Model.Filter.ToDate?.ToString("yyyy-MM-dd")" />
        </div>
        <div class="col-auto">
            <label class="form-label">Station</label>
            <select name="station" class="form-control">
                <option value="">All Stations</option>
                @foreach(var s in Model.AvailableStations)
                {
                    <option value="@s" selected="@(Model.Filter.Station == s ? "selected" : null)">@s</option>
                }
            </select>
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-primary">Run Report</button>
            <a class="btn btn-outline-secondary ms-2" href="@Url.Action("KitchenExport", "Reports", new { from = Model.Filter.FromDate?.ToString("yyyy-MM-dd"), to = Model.Filter.ToDate?.ToString("yyyy-MM-dd"), station = Model.Filter.Station })">Export CSV</a>
        </div>
    </form>

    <div class="row">
        <div class="col-md-3">
            <div class="report-tile tile-blue mb-3">
                <div class="tile-body">
                    <h6 class="text-uppercase text-muted mb-1">Total Items</h6>
                    <h3 class="mb-0">@Model.Items.Count()</h3>
                    <small class="text-light">Showing items matching filters</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="report-tile tile-orange mb-3">
                <div class="tile-body">
                    <h6 class="text-uppercase text-muted mb-1">Pending</h6>
                    <h3 class="mb-0">@Model.Items.Count(i => i.Status == "Pending")</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="report-tile tile-green mb-3">
                <div class="tile-body">
                    <h6 class="text-uppercase text-muted mb-1">Completed</h6>
                    <h3 class="mb-0">@Model.Items.Count(i => i.Status == "Completed")</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="report-tile tile-red mb-3">
                <div class="tile-body">
                    <h6 class="text-uppercase text-muted mb-1">Stations</h6>
                    <h3 class="mb-0">@Model.AvailableStations.Count()</h3>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-12">
            <div class="card">
                <div class="card-header">KOT Items</div>
                <div class="card-body p-0">
                    <table id="kotTable" class="table table-striped table-hover table-sm mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Order #</th>
                                <th>Table</th>
                                <th>Item</th>
                                <th>Qty</th>
                                <th>Station</th>
                                <th>Status</th>
                                <th>Requested At</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var it in Model.Items)
                            {
                                <tr>
                                    <td>@it.OrderNumber</td>
                                    <td>@it.TableName</td>
                                    <td>@it.ItemName</td>
                                    <td>@it.Quantity</td>
                                    <td>@it.Station</td>
                                    <td>@it.Status</td>
                                    <td>@it.RequestedAt.ToString("g")</td>
                                </tr>
                            }
                            @if(!Model.Items.Any())
                            {
                                <tr>
                                    <td class="text-center">No items found for selected criteria</td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        $(function(){
            $('#kotTable').DataTable({"pageLength":50, "order": [[6, 'desc']]});
        });
    </script>
}

