@model RestaurantManagementSystem.Models.FinancialSummaryViewModel
@{
    ViewData["Title"] = "Financial Summary";
}

<div class="container-fluid">
    <!-- Header and Breadcrumb -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2><i class="fas fa-chart-line me-2 text-primary"></i>Financial Summary</h2>
                    <p class="text-muted mb-0">Comprehensive financial analytics and performance metrics</p>
                </div>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0">
                        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="breadcrumb-item"><a asp-controller="Reports" asp-action="Index">Reports</a></li>
                        <li class="breadcrumb-item active">Financial</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>

    <!-- Filter Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-gradient-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-filter me-2"></i>Report Filters</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Financial" method="post">
                        <div class="row g-3">
                            <div class="col-md-4">
                                <label asp-for="Filter.StartDate" class="form-label fw-bold"></label>
                                <input asp-for="Filter.StartDate" class="form-control" type="date" />
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Filter.EndDate" class="form-label fw-bold"></label>
                                <input asp-for="Filter.EndDate" class="form-control" type="date" />
                            </div>
                            <div class="col-md-2">
                                <label asp-for="Filter.ComparisonPeriodDays" class="form-label fw-bold"></label>
                                <select asp-for="Filter.ComparisonPeriodDays" class="form-select">
                                    <option value="7">7 Days</option>
                                    <option value="30">30 Days</option>
                                    <option value="60">60 Days</option>
                                    <option value="90">90 Days</option>
                                </select>
                            </div>
                            <div class="col-md-2 d-flex align-items-end">
                                <button type="submit" class="btn btn-primary w-100">
                                    <i class="fas fa-search me-2"></i>Generate Report
                                </button>
                            </div>
                        </div>
                        <div class="mt-3">
                            <small class="text-muted">
                                <i class="fas fa-info-circle me-1"></i>
                                Report Period: <strong>@Model.Filter.DateRangeDisplay</strong> (@Model.Filter.TotalDays days)
                            </small>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">
            <i class="fas fa-exclamation-triangle me-2"></i>@ViewBag.Error
        </div>
    }

    <!-- KPI Dashboard Cards -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card gradient-card gradient-blue shadow-lg h-100 border-0">
                <div class="card-body text-white">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-white text-uppercase mb-2 opacity-90">
                                Total Revenue
                            </div>
                            <div class="h4 mb-0 font-weight-bold">
                                @Model.Summary.TotalRevenueDisplay
                            </div>
                            <small class="opacity-80">
                                @Model.Summary.TotalOrders orders
                            </small>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-dollar-sign fa-3x opacity-30"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card gradient-card gradient-green shadow-lg h-100 border-0">
                <div class="card-body text-white">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-white text-uppercase mb-2 opacity-90">
                                Net Revenue
                            </div>
                            <div class="h4 mb-0 font-weight-bold">
                                @Model.Summary.NetRevenueDisplay
                            </div>
                            <small class="opacity-80">
                                After ₹@Model.Summary.TotalDiscounts.ToString("N2") discounts
                            </small>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-chart-line fa-3x opacity-30"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card gradient-card gradient-cyan shadow-lg h-100 border-0">
                <div class="card-body text-white">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-white text-uppercase mb-2 opacity-90">
                                Average Order Value
                            </div>
                            <div class="h4 mb-0 font-weight-bold">
                                @Model.Summary.AverageOrderValueDisplay
                            </div>
                            <small class="opacity-80">
                                Daily avg: @Model.Summary.DailyAverageRevenueDisplay
                            </small>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-shopping-cart fa-3x opacity-30"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card gradient-card gradient-orange shadow-lg h-100 border-0">
                <div class="card-body text-white">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-white text-uppercase mb-2 opacity-90">
                                Digital Payments
                            </div>
                            <div class="h4 mb-0 font-weight-bold">
                                @Model.Summary.DigitalPaymentPercentage.ToString("F1")%
                            </div>
                            <small class="opacity-80">
                                ₹@Model.Summary.DigitalPaymentTotal.ToString("N2")
                            </small>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-credit-card fa-3x opacity-30"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Secondary KPI Row -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card gradient-card gradient-purple shadow-lg border-0">
                <div class="card-body text-white">
                    <h6 class="opacity-90 mb-2 text-uppercase" style="font-size: 0.7rem;">Total Tax Collected</h6>
                    <h3 class="mb-1">₹@Model.Summary.TotalTax.ToString("N2")</h3>
                    <small class="opacity-80">@Model.Summary.TaxPercentage.ToString("F2")% of subtotal</small>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card gradient-card gradient-pink shadow-lg border-0">
                <div class="card-body text-white">
                    <h6 class="opacity-90 mb-2 text-uppercase" style="font-size: 0.7rem;">Tips Received</h6>
                    <h3 class="mb-1">₹@Model.Summary.TotalTips.ToString("N2")</h3>
                    <small class="opacity-80">From @Model.Summary.TotalOrders orders</small>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card gradient-card gradient-teal shadow-lg border-0">
                <div class="card-body text-white">
                    <h6 class="opacity-90 mb-2 text-uppercase" style="font-size: 0.7rem;">Items Sold</h6>
                    <h3 class="mb-1">@Model.Summary.TotalQuantitySold</h3>
                    <small class="opacity-80">@Model.Summary.UniqueItemsSold unique items</small>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card gradient-card gradient-indigo shadow-lg border-0">
                <div class="card-body text-white">
                    <h6 class="opacity-90 mb-2 text-uppercase" style="font-size: 0.7rem;">Collection Rate</h6>
                    <h3 class="mb-1">@Model.Summary.PaymentCollectionRate.ToString("F1")%</h3>
                    <small class="opacity-80">₹@Model.Summary.UnpaidAmount.ToString("N2") pending</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Period Comparison -->
    @if (Model.Comparison?.CurrentPeriod != null)
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="card shadow-sm">
                    <div class="card-header bg-light">
                        <h5 class="mb-0"><i class="fas fa-exchange-alt me-2"></i>Period Comparison</h5>
                    </div>
                    <div class="card-body">
                        <div class="row text-center">
                            <div class="col-md-4">
                                <h6 class="text-muted">Orders Growth</h6>
                                <h3 class="@Model.Comparison.OrdersGrowthClass">
                                    @Model.Comparison.OrdersGrowthDisplay
                                </h3>
                                <p class="text-muted mb-0">
                                    <small>@Model.Comparison.PreviousPeriod.Orders → @Model.Comparison.CurrentPeriod.Orders</small>
                                </p>
                            </div>
                            <div class="col-md-4">
                                <h6 class="text-muted">Revenue Growth</h6>
                                <h3 class="@Model.Comparison.RevenueGrowthClass">
                                    @Model.Comparison.RevenueGrowthDisplay
                                </h3>
                                <p class="text-muted mb-0">
                                    <small>@Model.Comparison.PreviousPeriod.RevenueDisplay → @Model.Comparison.CurrentPeriod.RevenueDisplay</small>
                                </p>
                            </div>
                            <div class="col-md-4">
                                <h6 class="text-muted">AOV Growth</h6>
                                <h3 class="@Model.Comparison.AvgOrderValueGrowthClass">
                                    @Model.Comparison.AvgOrderValueGrowthDisplay
                                </h3>
                                <p class="text-muted mb-0">
                                    <small>@Model.Comparison.PreviousPeriod.AvgOrderValueDisplay → @Model.Comparison.CurrentPeriod.AvgOrderValueDisplay</small>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Payment Methods & Category Revenue -->
    <div class="row mb-4">
        <!-- Payment Methods -->
        <div class="col-lg-6 mb-3">
            <div class="card shadow h-100">
                <div class="card-header bg-gradient-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-wallet me-2"></i>Payment Method Breakdown</h5>
                </div>
                <div class="card-body">
                    @if (Model.PaymentMethods != null && Model.PaymentMethods.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-sm table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Payment Method</th>
                                        <th class="text-end">Transactions</th>
                                        <th class="text-end">Amount</th>
                                        <th class="text-end">Share</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var pm in Model.PaymentMethods)
                                    {
                                        <tr>
                                            <td>
                                                <i class="@pm.IconClass me-2"></i>
                                                @pm.DisplayName
                                            </td>
                                            <td class="text-end">@pm.TransactionCount</td>
                                            <td class="text-end fw-bold">@pm.TotalAmountDisplay</td>
                                            <td class="text-end">
                                                <div class="progress" style="height: 20px;">
                                                    <div class="progress-bar" style="width: @pm.Percentage%; background-color: @pm.ChartColor">
                                                        @pm.PercentageDisplay
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center py-4">No payment data available for this period.</p>
                    }
                </div>
            </div>
        </div>

        <!-- Category Revenue -->
        <div class="col-lg-6 mb-3">
            <div class="card shadow h-100">
                <div class="card-header bg-gradient-success text-white">
                    <h5 class="mb-0"><i class="fas fa-tags me-2"></i>Revenue by Category</h5>
                </div>
                <div class="card-body">
                    @if (Model.CategoryRevenues != null && Model.CategoryRevenues.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-sm table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Category</th>
                                        <th class="text-end">Items</th>
                                        <th class="text-end">Revenue</th>
                                        <th class="text-end">Share</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var cat in Model.CategoryRevenues)
                                    {
                                        <tr>
                                            <td>
                                                <i class="@cat.CategoryIcon me-2"></i>
                                                @cat.Category
                                            </td>
                                            <td class="text-end">@cat.TotalQuantity</td>
                                            <td class="text-end fw-bold">@cat.TotalRevenueDisplay</td>
                                            <td class="text-end">
                                                <div class="progress" style="height: 20px;">
                                                    <div class="progress-bar" style="width: @cat.RevenuePercentage%; background-color: @cat.ChartColor">
                                                        @cat.RevenuePercentageDisplay
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center py-4">No category data available for this period.</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Daily Breakdown -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-gradient-info text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="fas fa-calendar-alt me-2"></i>Daily Financial Breakdown</h5>
                    <button onclick="window.print()" class="btn btn-sm btn-light">
                        <i class="fas fa-print me-1"></i>Print Report
                    </button>
                </div>
                <div class="card-body">
                    @if (Model.DailyData != null && Model.DailyData.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Date</th>
                                        <th>Day</th>
                                        <th class="text-end">Orders</th>
                                        <th class="text-end">Revenue</th>
                                        <th class="text-end">Tax</th>
                                        <th class="text-end">Tips</th>
                                        <th class="text-end">Discounts</th>
                                        <th class="text-end">Net Revenue</th>
                                        <th class="text-end">Avg Order</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var day in Model.DailyData)
                                    {
                                        <tr>
                                            <td>@day.DateDisplay</td>
                                            <td><span class="badge bg-secondary">@day.DayOfWeek</span></td>
                                            <td class="text-end">@day.OrderCount</td>
                                            <td class="text-end fw-bold">@day.RevenueDisplay</td>
                                            <td class="text-end">₹@day.Tax.ToString("N2")</td>
                                            <td class="text-end">₹@day.Tips.ToString("N2")</td>
                                            <td class="text-end text-danger">₹@day.Discounts.ToString("N2")</td>
                                            <td class="text-end text-success fw-bold">@day.NetRevenueDisplay</td>
                                            <td class="text-end">@day.AvgOrderValueDisplay</td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot class="table-light fw-bold">
                                    <tr>
                                        <td colspan="2">TOTAL</td>
                                        <td class="text-end">@Model.Summary.TotalOrders</td>
                                        <td class="text-end">@Model.Summary.TotalRevenueDisplay</td>
                                        <td class="text-end">₹@Model.Summary.TotalTax.ToString("N2")</td>
                                        <td class="text-end">₹@Model.Summary.TotalTips.ToString("N2")</td>
                                        <td class="text-end text-danger">₹@Model.Summary.TotalDiscounts.ToString("N2")</td>
                                        <td class="text-end text-success">@Model.Summary.NetRevenueDisplay</td>
                                        <td class="text-end">@Model.Summary.AverageOrderValueDisplay</td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center py-4">No daily data available for this period.</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Top Performing Items -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-gradient-warning">
                    <h5 class="mb-0"><i class="fas fa-trophy me-2"></i>Top Performing Items</h5>
                </div>
                <div class="card-body">
                    @if (Model.TopItems != null && Model.TopItems.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>#</th>
                                        <th>Item Name</th>
                                        <th>Category</th>
                                        <th class="text-end">Price</th>
                                        <th class="text-end">Qty Sold</th>
                                        <th class="text-end">Total Revenue</th>
                                        <th class="text-end">Orders</th>
                                        <th class="text-end">Contribution</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @for (int i = 0; i < Model.TopItems.Count; i++)
                                    {
                                        var item = Model.TopItems[i];
                                        <tr>
                                            <td>
                                                @if (i < 3)
                                                {
                                                    <span class="badge bg-warning text-dark">@(i + 1)</span>
                                                }
                                                else
                                                {
                                                    <span>@(i + 1)</span>
                                                }
                                            </td>
                                            <td class="fw-bold">@item.ItemName</td>
                                            <td><span class="badge bg-info">@item.Category</span></td>
                                            <td class="text-end">@item.PriceDisplay</td>
                                            <td class="text-end">@item.QuantitySold</td>
                                            <td class="text-end fw-bold text-success">@item.TotalRevenueDisplay</td>
                                            <td class="text-end">@item.OrderCount</td>
                                            <td class="text-end">
                                                <span class="@item.PerformanceBadge">@item.ContributionDisplay</span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center py-4">No item performance data available for this period.</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Hourly Pattern -->
    @if (Model.HourlyPattern != null && Model.HourlyPattern.Any())
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="card shadow">
                    <div class="card-header bg-gradient-secondary text-white">
                        <h5 class="mb-0"><i class="fas fa-clock me-2"></i>Hourly Revenue Pattern</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead class="table-light">
                                    <tr>
                                        <th>Hour</th>
                                        <th class="text-end">Orders</th>
                                        <th class="text-end">Revenue</th>
                                        <th class="text-end">Avg Order</th>
                                        <th style="width: 40%;">Performance</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var hour in Model.HourlyPattern.OrderBy(h => h.Hour))
                                    {
                                        var maxRevenue = Model.HourlyPattern.Max(h => h.Revenue);
                                        var barWidth = maxRevenue > 0 ? (hour.Revenue / maxRevenue * 100) : 0;
                                        <tr class="@hour.HourClass">
                                            <td>
                                                @hour.TimeRange
                                                @if (hour.IsPeakHour)
                                                {
                                                    <i class="fas fa-star text-warning ms-1" title="Peak Hour"></i>
                                                }
                                            </td>
                                            <td class="text-end">@hour.OrderCount</td>
                                            <td class="text-end fw-bold">@hour.RevenueDisplay</td>
                                            <td class="text-end">@hour.AvgOrderValueDisplay</td>
                                            <td>
                                                <div class="progress" style="height: 25px;">
                                                    <div class="progress-bar @(hour.IsPeakHour ? "bg-warning" : "bg-primary")" 
                                                         style="width: @barWidth%">
                                                        @if (barWidth > 15)
                                                        {
                                                            <span>@hour.RevenueDisplay</span>
                                                        }
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <small class="text-muted">
                            <i class="fas fa-info-circle me-1"></i>
                            <i class="fas fa-star text-warning"></i> indicates peak hours (top 20% revenue)
                        </small>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<style>
    /* Beautiful Gradient Cards */
    .gradient-card {
        border-radius: 15px;
        overflow: hidden;
        transition: all 0.3s ease;
        position: relative;
    }
    
    .gradient-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 25px rgba(0,0,0,0.2) !important;
    }

    .gradient-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(135deg, rgba(255,255,255,0.1) 0%, rgba(255,255,255,0) 100%);
        pointer-events: none;
    }

    .gradient-blue {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    .gradient-green {
        background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
    }

    .gradient-cyan {
        background: linear-gradient(135deg, #56ccf2 0%, #2f80ed 100%);
    }

    .gradient-orange {
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
    }

    /* Boost visibility for the 'Total Tax Collected' card */
    .gradient-purple {
        /* More saturated cyan → pink gradient for better contrast */
        background: linear-gradient(135deg, #06b6d4 0%, #ec4899 100%);
    }

    .gradient-pink {
        background: linear-gradient(135deg, #ff6a88 0%, #ff99ac 100%);
    }

    .gradient-teal {
        background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
    }

    .gradient-indigo {
        background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
    }

    .gradient-card .card-body {
        position: relative;
        z-index: 1;
    }
    
    .border-left-primary { border-left: 0.25rem solid #4e73df !important; }
    .border-left-success { border-left: 0.25rem solid #1cc88a !important; }
    .border-left-info { border-left: 0.25rem solid #36b9cc !important; }
    .border-left-warning { border-left: 0.25rem solid #f6c23e !important; }
    
    .bg-gradient-primary {
        background: linear-gradient(180deg, #4e73df 10%, #224abe 100%);
    }
    .bg-gradient-success {
        background: linear-gradient(180deg, #1cc88a 10%, #13855c 100%);
    }
    .bg-gradient-info {
        background: linear-gradient(180deg, #36b9cc 10%, #258391 100%);
    }
    .bg-gradient-warning {
        background: linear-gradient(180deg, #f6c23e 10%, #dda20a 100%);
    }
    .bg-gradient-secondary {
        background: linear-gradient(180deg, #858796 10%, #60616f 100%);
    }

    @@media print {
        .card-header button,
        .breadcrumb,
        form,
        .no-print {
            display: none !important;
        }
    }
</style>
