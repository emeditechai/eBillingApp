@model RestaurantManagementSystem.Models.GSTBreakupReportViewModel
@{
    ViewData["Title"] = "GST Breakup Report - Indian Tax Compliance";
}

<div class="container-fluid">
    <!-- Header and Breadcrumb -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center report-header gst-pro-header rounded-3 shadow-sm px-3 py-2">
                <div class="d-flex align-items-center gap-3">
                    <div class="gst-header-icon d-flex align-items-center justify-content-center rounded-2"><i class="fas fa-file-invoice-dollar fa-lg"></i></div>
                    <div>
                        <h1 class="gst-header-title mb-1">GST Breakup</h1>
                        <p class="gst-header-subtitle mb-0">Taxable value, CGST / SGST and invoice totals by order</p>
                    </div>
                </div>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0">
                        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="breadcrumb-item"><a asp-controller="Reports" asp-action="Index">Reports</a></li>
                        <li class="breadcrumb-item active">GST Breakup</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>

<div class="card shadow-sm mb-4">
    <div class="card-header bg-gradient text-white d-flex align-items-center justify-content-between" style="background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);">
        <div>
            <h4 class="mb-0"><i class="fas fa-file-invoice-dollar me-2"></i>GST Breakup Report</h4>
            <small class="opacity-75">Goods and Services Tax - Indian Tax Compliance</small>
        </div>
        <div class="text-end">
            <div class="small opacity-75">Report Period</div>
            <div class="fw-bold">@(Model.Filter.StartDate?.ToString("dd MMM yyyy") ?? "Today") - @(Model.Filter.EndDate?.ToString("dd MMM yyyy") ?? "Today")</div>
        </div>
    </div>
    <div class="card-body">
        <!-- Note: Formula display -->
        <div class="alert alert-info alert-dismissible fade show mb-3" role="alert">
            <i class="fas fa-info-circle me-2"></i>
            <strong>Taxable Value Formula:</strong> Subtotal - Discount | 
            <strong>GST Calculation:</strong> Taxable Value × GST% | 
            <strong>Invoice Total:</strong> Taxable Value + Total GST
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>

        <form asp-action="GSTBreakup" method="post" class="row g-3 mb-4">
            <div class="col-md-3">
                <label asp-for="Filter.StartDate" class="form-label fw-semibold"></label>
                <input asp-for="Filter.StartDate" class="form-control" type="date" />
            </div>
            <div class="col-md-3">
                <label asp-for="Filter.EndDate" class="form-label fw-semibold"></label>
                <input asp-for="Filter.EndDate" class="form-control" type="date" />
            </div>
            <div class="col-md-6 d-flex align-items-end flex-wrap gap-2">
                <button type="submit" class="btn btn-success"><i class="fas fa-sync-alt me-1"></i>Refresh Report</button>
                <button type="button" id="exportCsvBtn" class="btn btn-outline-secondary"><i class="fas fa-file-csv me-1"></i>Export CSV</button>
                <button type="button" id="exportPdfBtn" class="btn btn-outline-danger"><i class="fas fa-file-pdf me-1"></i>PDF</button>
                <button type="button" id="printBtn" class="btn btn-outline-primary"><i class="fas fa-print me-1"></i>Print</button>
            </div>
        </form>

        <style>
            /* Professional page heading */
            .report-header { border-bottom: 1px solid #e9ecef; }
            .gst-pro-header { background: linear-gradient(90deg,#ffffff 0%, #f8fafc 60%, #eef2f7 100%); }
            .gst-header-icon { width:56px; height:56px; background:linear-gradient(135deg,#1e3a8a,#1d4ed8); color:#fff; box-shadow:0 4px 12px rgba(29,78,216,.35); }
            .gst-header-title { font-size:2.05rem; font-weight:800; color:#212529; letter-spacing:-.5px; }
            .gst-header-subtitle { font-size:.95rem; color:#5a6572; font-weight:500; }
            @@media (max-width:768px){ .gst-header-title { font-size:1.55rem; } .gst-header-icon { width:44px; height:44px; } }
            /* Uniform gradient tiles for GST Breakup summary */
            .report-tile { padding: 1.25rem; border-radius: .6rem; box-shadow: 0 2px 8px rgba(0,0,0,0.06); height:150px; display:flex; flex-direction:column; justify-content:center; gap:.25rem; }
            .report-tile .label { margin:0; font-weight:600; opacity:.95; }
            .report-tile .value { font-weight:800; font-size:2.1rem; line-height:1; }
            .report-tile .value.display-6 { font-size:2.1rem; }

            .tile-indigo { background: linear-gradient(135deg,#5b6bf5 0%,#7bb1ff 100%); color:#fff; }
            .tile-cyan { background: linear-gradient(135deg,#14b8a6 0%,#2bd4d4 100%); color:#fff; }
            .tile-amber { background: linear-gradient(135deg,#ffd86b 0%,#ffb86b 100%); color:#222; }
            .tile-green { background: linear-gradient(135deg,#2ecc71 0%,#20c997 100%); color:#fff; }
            .tile-gray { background: linear-gradient(135deg,#778089 0%,#9aa4a9 100%); color:#fff; }
            .tile-charcoal { background: linear-gradient(135deg,#2b2b2b 0%,#4b4b4b 100%); color:#fff; }

            /* responsive */
            @@media (max-width:768px) {
                .report-tile { height:120px; padding:1rem; }
                .report-tile .value { font-size:1.6rem; }
            }
        </style>

        <div class="row mb-4">
            <div class="col-md-2 mb-3">
                <div class="report-tile tile-indigo">
                    <div class="label">Invoices</div>
                    <div class="value display-6">@Model.Summary.InvoiceCount</div>
                </div>
            </div>

            <div class="col-md-2 mb-3">
                <div class="report-tile tile-cyan">
                    <div class="label">Taxable Value</div>
                    <div class="value display-6">₹@(Model.Summary.TotalTaxableValue.ToString("N2"))</div>
                </div>
            </div>

            <div class="col-md-2 mb-3">
                <div class="report-tile tile-amber">
                    <div class="label">Discount</div>
                    <div class="value display-6">₹@(Model.Summary.TotalDiscount.ToString("N2"))</div>
                </div>
            </div>

            <div class="col-md-2 mb-3">
                <div class="report-tile tile-green">
                    <div class="label">CGST</div>
                    <div class="value display-6">₹@(Model.Summary.TotalCGST.ToString("N2"))</div>
                </div>
            </div>

            <div class="col-md-2 mb-3">
                <div class="report-tile tile-gray">
                    <div class="label">SGST</div>
                    <div class="value display-6">₹@(Model.Summary.TotalSGST.ToString("N2"))</div>
                </div>
            </div>

            <div class="col-md-2 mb-3">
                <div class="report-tile tile-charcoal">
                    <div class="label">Invoice Total</div>
                    <div class="value display-6">₹@(Model.Summary.NetAmount.ToString("N2"))</div>
                </div>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-hover table-sm" id="gstBreakupTable">
                <thead class="table-dark">
                    <tr>
                        <th>Date/Time</th>
                        <th>Invoice #</th>
                        <th>Type</th>
                        <th>Table</th>
                        <th class="text-end">Subtotal</th>
                        <th class="text-end">Discount</th>
                        <th class="text-end bg-warning bg-opacity-25 text-dark">Taxable Value</th>
                        <th class="text-end">GST %</th>
                        <th class="text-end">CGST %</th>
                        <th class="text-end">CGST ₹</th>
                        <th class="text-end">SGST %</th>
                        <th class="text-end">SGST ₹</th>
                        <th class="text-end bg-success bg-opacity-25 text-dark">Total GST</th>
                        <th class="text-end bg-info bg-opacity-25 fw-bold text-dark">Invoice Total</th>
                    </tr>
                </thead>
                <tbody>
                @if (!Model.Rows.Any())
                {
                    <tr><td colspan="14" class="text-center text-muted py-4">No payments found for selected date range.</td></tr>
                }
                else
                {
                    foreach (var row in Model.Rows)
                    {
                        decimal subtotal = row.TaxableValue + row.DiscountAmount;
                        <tr>
                            <td class="small">@row.PaymentDateFormatted</td>
                            <td class="fw-semibold">@row.OrderNumber</td>
                            <td>
                                @if (row.OrderType == "Bar")
                                {
                                    <span class="badge bg-primary">Others</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">General</span>
                                }
                            </td>
                            <td>@row.TableNumber</td>
                            <td class="text-end text-secondary small">₹@(subtotal.ToString("N2"))</td>
                            <td class="text-end text-danger small">@(row.DiscountAmount > 0 ? $"-₹{row.DiscountAmount:N2}" : "-")</td>
                            <td class="text-end fw-bold bg-warning bg-opacity-10 text-dark">₹@(row.TaxableValue.ToString("N2"))</td>
                            <td class="text-end">
                                <span class="badge @(row.GSTPercentage >= 20 ? "bg-danger" : "bg-info")">
                                    @(row.GSTPercentage.ToString("N1"))%
                                </span>
                            </td>
                            <td class="text-end small">@(row.CGSTPercentage.ToString("N2"))%</td>
                            <td class="text-end">₹@(row.CGSTAmount.ToString("N2"))</td>
                            <td class="text-end small">@(row.SGSTPercentage.ToString("N2"))%</td>
                            <td class="text-end">₹@(row.SGSTAmount.ToString("N2"))</td>
                            <td class="text-end fw-bold bg-success bg-opacity-10 text-dark">₹@(row.TotalGST.ToString("N2"))</td>
                            <td class="text-end fw-bold bg-info bg-opacity-10 text-dark">₹@(row.InvoiceTotal.ToString("N2"))</td>
                        </tr>
                    }
                }
                </tbody>
                <tfoot class="table-secondary fw-bold">
                    <tr>
                        <td colspan="6" class="text-end">TOTALS:</td>
                        <td class="text-end bg-warning bg-opacity-25 text-dark">₹@(Model.Summary.TotalTaxableValue.ToString("N2"))</td>
                        <td colspan="2"></td>
                        <td class="text-end">₹@(Model.Summary.TotalCGST.ToString("N2"))</td>
                        <td></td>
                        <td class="text-end">₹@(Model.Summary.TotalSGST.ToString("N2"))</td>
                        <td class="text-end bg-success bg-opacity-25 text-dark">₹@((Model.Summary.TotalCGST + Model.Summary.TotalSGST).ToString("N2"))</td>
                        <td class="text-end bg-info bg-opacity-25 text-dark">₹@(Model.Summary.NetAmount.ToString("N2"))</td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
    </div>
</div>

</div>

@section Scripts {
    <script>
        // Utility to dynamically load a script and return a Promise that resolves when it's loaded
        function loadScript(src, attrs = {}) {
            return new Promise((resolve, reject) => {
                if (document.querySelector('script[src="' + src + '"]')) return resolve();
                const s = document.createElement('script');
                s.src = src;
                s.async = false;
                Object.keys(attrs).forEach(k => s.setAttribute(k, attrs[k]));
                s.onload = () => resolve();
                s.onerror = (e) => reject(new Error('Failed to load ' + src));
                document.head.appendChild(s);
            });
        }

        async function ensurePdfLibs() {
            // Try multiple CDN endpoints for resiliency
            const html2canvasCandidates = [
                { url: 'https://cdnjs.cloudflare.com/ajax/libs/html2canvas/1.4.1/html2canvas.min.js', attrs: { integrity: 'sha512-BNa5lqS2sE3cOogzAm8h1Hn0pVITNrW2N7DbStQzQd6hw2yffA9H9n1tFoZT3zh0+BTtPlqvGjNFH6G/JPrfGw==', crossorigin: 'anonymous', referrerpolicy: 'no-referrer' } },
                { url: 'https://cdn.jsdelivr.net/npm/html2canvas@1.4.1/dist/html2canvas.min.js', attrs: {} },
                { url: 'https://unpkg.com/html2canvas@1.4.1/dist/html2canvas.min.js', attrs: {} }
            ];

            const jspdfCandidates = [
                { url: 'https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js', attrs: { integrity: 'sha512-ptgLOcAfeUvl4GXgXu2fLG3gNsYch0eYRqpMfrQa6zlmKCNt2uQ6Xo8XzYx+lNEwGDbVS9KfH2sJdF8qcKmlRQ==', crossorigin: 'anonymous', referrerpolicy: 'no-referrer' } },
                { url: 'https://cdn.jsdelivr.net/npm/jspdf@2.5.1/dist/jspdf.umd.min.js', attrs: {} },
                { url: 'https://unpkg.com/jspdf@2.5.1/dist/jspdf.umd.min.js', attrs: {} }
            ];

            async function tryCandidates(list, globalCheck) {
                if (globalCheck()) return true;
                let lastErr = null;
                for (const c of list) {
                    try {
                        await loadScript(c.url, c.attrs || {});
                        if (globalCheck()) return true;
                    } catch (err) {
                        // keep trying other candidates
                        lastErr = err;
                        console.warn('Failed loading', c.url, err);
                    }
                }
                if (lastErr) throw lastErr;
                return false;
            }

            // Load html2canvas
            await tryCandidates(html2canvasCandidates, () => typeof window.html2canvas !== 'undefined');
            // Load jsPDF
            await tryCandidates(jspdfCandidates, () => (typeof window.jspdf !== 'undefined' && window.jspdf.jsPDF) || typeof window.jsPDF !== 'undefined');
        }

        document.getElementById('exportCsvBtn').addEventListener('click', function () {
            const rows = Array.from(document.querySelectorAll('#gstBreakupTable tr'));
            const csv = rows.map(r => Array.from(r.children).map(c => '"' + c.innerText.replace(/"/g,'""') + '"').join(',')).join('\n');
            const blob = new Blob([csv], { type: 'text/csv;charset=utf-8;' });
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = 'gst_breakup_report.csv';
            a.click();
            URL.revokeObjectURL(url);
        });

        document.getElementById('printBtn').addEventListener('click', function() {
            const printContent = document.querySelector('.card').outerHTML;
            const win = window.open('', '_blank');
            win.document.write('<html><head><title>GST Breakup Report</title><link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.min.css" /></head><body>');
            win.document.write(printContent);
            win.document.write('</body></html>');
            win.print();
            win.close();
        });

        // PDF export using html2canvas + jsPDF — ensure libs are loaded first
        document.getElementById('exportPdfBtn').addEventListener('click', async function() {
            try {
                await ensurePdfLibs();

                // jsPDF may be exported as window.jspdf (UMD) which contains jsPDF property, or older window.jsPDF
                let jsPDFCtor = null;
                if (window.jspdf && window.jspdf.jsPDF) jsPDFCtor = window.jspdf.jsPDF;
                else if (window.jsPDF) jsPDFCtor = window.jsPDF;

                if (!jsPDFCtor) { alert('PDF engine not loaded'); return; }

                const doc = new jsPDFCtor('p','pt','a4');
                const header = document.querySelector('.gst-pro-header');
                const table = document.getElementById('gstBreakupTable');
                const chunks = [];
                if (header) chunks.push(header);
                if (table) chunks.push(table);

                let y = 20;
                for (const el of chunks) {
                    const canvas = await html2canvas(el, { scale: 2 });
                    const img = canvas.toDataURL('image/png');
                    const pageWidth = doc.internal.pageSize.getWidth() - 40;
                    const ratio = canvas.width / canvas.height;
                    const imgHeight = pageWidth / ratio;
                    if (y + imgHeight > doc.internal.pageSize.getHeight() - 20) { doc.addPage(); y = 20; }
                    doc.addImage(img, 'PNG', 20, y, pageWidth, imgHeight);
                    y += imgHeight + 15;
                }
                doc.save('gst_breakup_report.pdf');
            } catch (err) {
                console.error(err);
                alert('Failed to generate PDF: ' + (err && err.message ? err.message : err));
            }
        });
    </script>
}
