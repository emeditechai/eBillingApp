@model RestaurantManagementSystem.ViewModels.CollectionRegisterViewModel
@using RestaurantManagementSystem.Models.Authorization
@{
    ViewData["Title"] = "Collection Register";
    var reportPermissions = ViewBag.ReportPermissions as PermissionSet ?? new PermissionSet();
}

<style>
    .report-header-gradient {
        background: linear-gradient(135deg, #059669 0%, #10b981 50%, #34d399 100%);
        padding: 1.5rem;
        border-radius: 0.5rem 0.5rem 0 0;
        color: white;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    }
    .report-header-gradient h4 {
        font-weight: 700;
        margin: 0;
        text-shadow: 0 2px 4px rgba(0,0,0,0.2);
    }
    .report-header-gradient .subtitle {
        opacity: 0.95;
        font-size: 0.95rem;
        margin-top: 0.25rem;
    }
</style>

<div class="card shadow-sm mb-4">
    <div class="report-header-gradient">
        <div class="d-flex align-items-center justify-content-between">
            <div>
                <h4><i class="fas fa-cash-register me-2"></i>Collection Register Report</h4>
                <div class="subtitle">Order-wise Payment Method-wise Collection Details</div>
            </div>
            <div class="text-end">
                <i class="fas fa-file-invoice-dollar fa-3x opacity-50"></i>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="alert alert-info mb-4">
            <i class="fas fa-info-circle me-2"></i>
            <strong>Report Formula:</strong> Actual Bill = Subtotal - Discount (Taxable Amount) | Receipt Amount = Payment Amount + Tip + Round Off (signed) | 
            <strong>Note:</strong> Shows individual payment records (split payments appear as separate rows)
        </div>
        
        <form asp-action="CollectionRegister" method="post" class="row g-3 mb-3 align-items-end">
            <div class="col-lg-2 col-md-3">
                <label asp-for="Filter.FromDate" class="form-label">From Date</label>
                <input asp-for="Filter.FromDate" class="form-control" type="date" />
            </div>
            <div class="col-lg-2 col-md-3">
                <label asp-for="Filter.ToDate" class="form-label">To Date</label>
                <input asp-for="Filter.ToDate" class="form-control" type="date" />
            </div>
            <div class="col-lg-3 col-md-6">
                <label asp-for="Filter.PaymentMethodId" class="form-label">Payment Method</label>
                <select asp-for="Filter.PaymentMethodId" asp-items="Model.PaymentMethods" class="form-select">
                </select>
            </div>
            <div class="col-lg-3 col-md-6">
                <label asp-for="Filter.CounterId" class="form-label">Counter</label>
                <select asp-for="Filter.CounterId" asp-items="Model.Counters" class="form-select">
                </select>
            </div>
            <div class="col-lg-2 col-md-12 d-flex justify-content-lg-end justify-content-start gap-2 flex-wrap">
                <button type="submit" class="btn btn-success"><i class="fas fa-sync-alt me-1"></i>Refresh</button>
                @if (reportPermissions.CanExport)
                {
                    <button type="button" id="exportCsvBtn" class="btn btn-outline-secondary"><i class="fas fa-file-csv me-1"></i>CSV</button>
                    <button type="button" id="exportExcelBtn" class="btn btn-outline-success"><i class="fas fa-file-excel me-1"></i>Excel</button>
                    <button type="button" id="exportPdfBtn" class="btn btn-outline-danger"><i class="fas fa-file-pdf me-1"></i>PDF</button>
                }
                <button type="button" id="printBtn" class="btn btn-outline-primary"><i class="fas fa-print me-1"></i>Print</button>
            </div>
        </form>

        <style>
            .summary-tile { padding: 1rem; border-radius: .5rem; box-shadow: 0 2px 6px rgba(0,0,0,0.08); height:120px; display:flex; flex-direction:column; justify-content:center; }
            .summary-tile .label { font-size:.85rem; font-weight:600; opacity:.9; margin-bottom:.25rem; }
            .summary-tile .value { font-weight:700; font-size:1.6rem; line-height:1.1; }
            .tile-purple { background: linear-gradient(135deg,#9333ea 0%,#a855f7 100%); color:#fff; }
            .tile-blue { background: linear-gradient(135deg,#3b82f6 0%,#60a5fa 100%); color:#fff; }
            .tile-orange { background: linear-gradient(135deg,#f97316 0%,#fb923c 100%); color:#fff; }
            .tile-success { background: linear-gradient(135deg,#16a34a 0%,#22c55e 100%); color:#fff; }
            .tile-info { background: linear-gradient(135deg,#0ea5e9 0%,#38bdf8 100%); color:#fff; }
            .tile-emerald { background: linear-gradient(135deg,#059669 0%,#10b981 100%); color:#fff; }
            
            @@media (max-width:768px) {
                .summary-tile { height:100px; padding:.8rem; }
                .summary-tile .value { font-size:1.3rem; }
            }
            
            @@media print {
                .no-print { display: none !important; }
                .card { border: none !important; box-shadow: none !important; }
                .card-header { background: #198754 !important; -webkit-print-color-adjust: exact; print-color-adjust: exact; }
                .table { font-size: 10pt; }
            }
        </style>

        <div class="row mb-4">
            <div class="col-lg-2 col-md-4 col-sm-6 mb-3">
                <div class="summary-tile tile-purple">
                    <div class="label">Total Transactions</div>
                    <div class="value">@(Model.Summary.TotalTransactions)</div>
                </div>
            </div>
            <div class="col-lg-2 col-md-4 col-sm-6 mb-3">
                <div class="summary-tile tile-blue">
                    <div class="label">Actual Bill (Taxable)</div>
                    <div class="value">₹@(Model.Summary.TotalActualAmount.ToString("N2"))</div>
                </div>
            </div>
            <div class="col-lg-2 col-md-4 col-sm-6 mb-3">
                <div class="summary-tile tile-orange">
                    <div class="label">Total Discount</div>
                    <div class="value">₹@(Model.Summary.TotalDiscount.ToString("N2"))</div>
                </div>
            </div>
            <div class="col-lg-2 col-md-4 col-sm-6 mb-3">
                <div class="summary-tile tile-success">
                    <div class="label">Total GST</div>
                    <div class="value">₹@(Model.Summary.TotalGST.ToString("N2"))</div>
                </div>
            </div>
            <div class="col-lg-2 col-md-4 col-sm-6 mb-3">
                <div class="summary-tile tile-info">
                    <div class="label">Round Off</div>
                    <div class="value">₹@(Model.Summary.TotalRoundOff.ToString("+0.00;-0.00;0.00"))</div>
                </div>
            </div>
            <div class="col-lg-2 col-md-4 col-sm-6 mb-3">
                <div class="summary-tile tile-emerald">
                    <div class="label">Total Collection</div>
                    <div class="value">₹@(Model.Summary.TotalReceiptAmount.ToString("N2"))</div>
                </div>
            </div>
        </div>

        @if (Model.Rows.Any())
        {
            <div class="alert alert-success mb-3">
                <i class="fas fa-filter me-2"></i>
                <strong>Period:</strong> @(Model.Filter.FromDate?.ToString("dd-MMM-yyyy")) to @(Model.Filter.ToDate?.ToString("dd-MMM-yyyy")) |
                <strong>Payment Method:</strong> @Model.Filter.PaymentMethodName |
                <strong>Counter:</strong> @Model.Filter.CounterName |
                <strong>Records:</strong> @(Model.Rows.Count)
            </div>

            <div class="table-responsive" id="reportContent">
                <table class="table table-striped table-hover table-sm" id="collectionTable">
                    <thead class="table-success">
                        <tr>
                            <th>Date & Time</th>
                            <th>Order No</th>
                            <th>Table No</th>
                            <th>Username</th>
                            <th>Counter</th>
                            <th class="text-end">Actual Bill</th>
                            <th class="text-end">Discount</th>
                            <th class="text-end">GST Amount</th>
                            <th class="text-end">Round Off</th>
                            <th class="text-end">Receipt Amount</th>
                            <th>Payment Method</th>
                            <th>Details</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var row in Model.Rows)
                        {
                            var isRefund = row.PaymentStatus == 3;
                            var rowClass = isRefund ? "table-danger" : "";
                            var textClass = isRefund ? "text-danger" : "";
                            <tr class="@rowClass">
                                <td class="text-nowrap">@(row.PaymentDate.ToString("dd-MMM-yyyy HH:mm"))</td>
                                <td>@row.OrderNo</td>
                                <td>@row.TableNo</td>
                                <td>@row.Username</td>
                                <td class="text-nowrap">@(!string.IsNullOrWhiteSpace(row.CounterName) ? row.CounterName : "-")</td>
                                <td class="text-end @textClass">₹@(row.ActualBillAmount.ToString("N2"))</td>
                                <td class="text-end @textClass">₹@(Math.Abs(row.DiscountAmount).ToString("N2"))</td>
                                <td class="text-end @(isRefund ? "text-danger" : "text-success")">₹@(row.GSTAmount.ToString("N2"))</td>
                                <td class="text-end @textClass">₹@(row.RoundOffAmount.ToString("+0.00;-0.00;0.00"))</td>
                                <td class="text-end fw-bold @textClass">₹@(row.ReceiptAmount.ToString("N2"))</td>
                                <td><span class="badge @(isRefund ? "bg-danger" : "bg-primary")">@row.PaymentMethod</span></td>
                                <td class="small @(isRefund ? "text-danger fw-bold" : "text-muted")">@row.Details</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot class="table-light fw-bold">
                        <tr>
                            <td colspan="5" class="text-end">TOTAL:</td>
                            <td class="text-end">₹@(Model.Summary.TotalActualAmount.ToString("N2"))</td>
                            <td class="text-end">₹@(Model.Summary.TotalDiscount.ToString("N2"))</td>
                            <td class="text-end text-success">₹@(Model.Summary.TotalGST.ToString("N2"))</td>
                            <td class="text-end">₹@(Model.Summary.TotalRoundOff.ToString("+0.00;-0.00;0.00"))</td>
                            <td class="text-end text-success">₹@(Model.Summary.TotalReceiptAmount.ToString("N2"))</td>
                            <td colspan="2"></td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-warning">
                <i class="fas fa-exclamation-triangle me-2"></i>No collection records found for the selected period and payment method.
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        function ensureExportAllowed() {
            var canExport = @((reportPermissions.CanExport).ToString().ToLower());
            if (!canExport) {
                alert('You do not have permission to export this report.');
                return false;
            }
            return true;
        }

        function buildExportFileSuffix() {
            const from = (document.querySelector('[name="Filter.FromDate"]')?.value || '').toString();
            const to = (document.querySelector('[name="Filter.ToDate"]')?.value || '').toString();
            const counterText = (document.querySelector('[name="Filter.CounterId"] option:checked')?.textContent || 'ALL').trim();
            const safeCounter = counterText.replace(/[^a-z0-9\-_ ]/gi, '').replace(/\s+/g, '_');
            const safeFrom = from || new Date().toISOString().split('T')[0];
            const safeTo = to || safeFrom;
            return `${safeFrom}_to_${safeTo}_${safeCounter}`;
        }

        document.getElementById('exportCsvBtn')?.addEventListener('click', function() {
            if (!ensureExportAllowed()) return;
            const table = document.getElementById('collectionTable');
            let csv = [];
            
            // Header
            const headerCells = table.querySelectorAll('thead th');
            let headerRow = [];
            headerCells.forEach(cell => headerRow.push('"' + cell.textContent.trim() + '"'));
            csv.push(headerRow.join(','));
            
            // Body
            const rows = table.querySelectorAll('tbody tr');
            rows.forEach(row => {
                const cells = row.querySelectorAll('td');
                let rowData = [];
                cells.forEach(cell => {
                    let text = cell.textContent.trim().replace(/"/g, '""');
                    rowData.push('"' + text + '"');
                });
                csv.push(rowData.join(','));
            });
            
            // Footer
            const footerCells = table.querySelectorAll('tfoot td');
            let footerRow = [];
            footerCells.forEach(cell => footerRow.push('"' + cell.textContent.trim() + '"'));
            csv.push(footerRow.join(','));
            
            // Download
            const csvContent = csv.join('\n');
            const blob = new Blob([csvContent], { type: 'text/csv;charset=utf-8;' });
            const link = document.createElement('a');
            link.href = URL.createObjectURL(blob);
            link.download = 'CollectionRegister_' + buildExportFileSuffix() + '.csv';
            link.click();
        });

        document.getElementById('exportExcelBtn')?.addEventListener('click', function() {
            if (!ensureExportAllowed()) return;
            // For Excel export, we'll use HTML table format which Excel can open
            const table = document.getElementById('collectionTable').outerHTML;
            const blob = new Blob([table], { type: 'application/vnd.ms-excel' });
            const link = document.createElement('a');
            link.href = URL.createObjectURL(blob);
            link.download = 'CollectionRegister_' + buildExportFileSuffix() + '.xls';
            link.click();
        });

        document.getElementById('exportPdfBtn')?.addEventListener('click', function() {
            if (!ensureExportAllowed()) return;
            const form = document.querySelector('form[asp-action="CollectionRegister"], form[action*="CollectionRegister"]');
            const from = (document.querySelector('[name="Filter.FromDate"]')?.value || '').toString();
            const to = (document.querySelector('[name="Filter.ToDate"]')?.value || '').toString();
            const paymentMethodId = (document.querySelector('[name="Filter.PaymentMethodId"]')?.value || '').toString();
            const counterId = (document.querySelector('[name="Filter.CounterId"]')?.value || '').toString();
            const params = new URLSearchParams();
            if (from) params.set('fromDate', from);
            if (to) params.set('toDate', to);
            if (paymentMethodId) params.set('paymentMethodId', paymentMethodId);
            if (counterId) params.set('counterId', counterId);

            const url = '@Url.Action("CollectionRegisterPdf", "Reports")' + (params.toString() ? ('?' + params.toString()) : '');
            window.open(url, '_blank');
        });

        document.getElementById('printBtn').addEventListener('click', function() {
            window.print();
        });
    </script>
}
