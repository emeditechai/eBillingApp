@model RestaurantManagementSystem.Models.UPISettingsViewModel
@{
    ViewData["Title"] = "UPI Payment Settings";
}

<style>
    .upi-settings-container {
        max-width: 800px;
        margin: 20px auto;
    }
    .settings-card {
        background: white;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        padding: 30px;
    }
    .settings-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 20px;
        border-radius: 10px 10px 0 0;
        margin: -30px -30px 30px -30px;
    }
    .form-group {
        margin-bottom: 20px;
    }
    .info-box {
        background: #f0f9ff;
        border-left: 4px solid #3b82f6;
        padding: 15px;
        margin: 20px 0;
        border-radius: 5px;
    }
    .example-box {
        background: #fffbeb;
        border-left: 4px solid #f59e0b;
        padding: 15px;
        margin: 10px 0;
        border-radius: 5px;
        font-family: 'Courier New', monospace;
    }
    .toggle-switch {
        position: relative;
        display: inline-block;
        width: 60px;
        height: 34px;
    }
    .toggle-switch input {
        opacity: 0;
        width: 0;
        height: 0;
    }
    .slider {
        position: absolute;
        cursor: pointer;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: #ccc;
        transition: .4s;
        border-radius: 34px;
    }
    .slider:before {
        position: absolute;
        content: "";
        height: 26px;
        width: 26px;
        left: 4px;
        bottom: 4px;
        background-color: white;
        transition: .4s;
        border-radius: 50%;
    }
    input:checked + .slider {
        background-color: #10b981;
    }
    input:checked + .slider:before {
        transform: translateX(26px);
    }
</style>

<div class="upi-settings-container">
    <div class="settings-card">
        <div class="settings-header">
            <h2><i class="fas fa-qrcode me-2"></i>UPI Payment Settings</h2>
            <p class="mb-0">Configure UPI QR Code for digital payments</p>
        </div>

        @if (!string.IsNullOrEmpty(Model.Message))
        {
            <div class="alert @(Model.IsSuccess ? "alert-success" : "alert-danger") alert-dismissible fade show" role="alert">
                <i class="fas @(Model.IsSuccess ? "fa-check-circle" : "fa-exclamation-triangle") me-2"></i>
                @Model.Message
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <form asp-action="Update" method="post">
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label for="UPIId" class="form-label">
                    <i class="fas fa-id-card me-1"></i>UPI ID <span class="text-danger">*</span>
                </label>
                <input type="text" 
                       class="form-control" 
                       id="UPIId" 
                       name="UPIId" 
                       value="@Model.UPIId" 
                       placeholder="yourname@paytm" 
                       required />
                <small class="form-text text-muted">Your UPI ID (VPA - Virtual Payment Address)</small>
                <div class="example-box mt-2">
                    <strong>Examples:</strong><br>
                    • restaurant@paytm<br>
                    • business@ybl<br>
                    • merchant@oksbi
                </div>
            </div>

            <div class="form-group">
                <label for="PayeeName" class="form-label">
                    <i class="fas fa-store me-1"></i>Business/Restaurant Name <span class="text-danger">*</span>
                </label>
                <input type="text" 
                       class="form-control" 
                       id="PayeeName" 
                       name="PayeeName" 
                       value="@Model.PayeeName" 
                       placeholder="Your Restaurant Name" 
                       required />
                <small class="form-text text-muted">This name will appear in customer's payment app</small>
            </div>

            <div class="form-group">
                <label class="form-label d-flex align-items-center">
                    <i class="fas fa-power-off me-1"></i>Enable UPI Payments
                    <label class="toggle-switch ms-auto">
                        <input type="checkbox" 
                               id="IsEnabled" 
                               name="IsEnabled" 
                               value="true" 
                               @(Model.IsEnabled ? "checked" : "") />
                        <span class="slider"></span>
                    </label>
                </label>
                <small class="form-text text-muted">When enabled, QR codes will appear on bills and payment pages</small>
            </div>

            <div class="info-box">
                <h6><i class="fas fa-info-circle me-1"></i>How it works:</h6>
                <ul class="mb-0">
                    <li>Customers scan the QR code with any UPI app (Google Pay, PhonePe, Paytm, etc.)</li>
                    <li>Bill amount is automatically filled in the payment app</li>
                    <li>Customer confirms and completes payment</li>
                    <li>QR code appears on: Payment page, Printed bills (A4 & POS receipts)</li>
                </ul>
            </div>

            <div class="d-grid gap-2 mt-4">
                <button type="submit" class="btn btn-primary btn-lg">
                    <i class="fas fa-save me-2"></i>Save Settings
                </button>
            </div>
        </form>

        <div class="mt-4 text-center">
            <a asp-controller="Settings" asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-1"></i>Back to Settings
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Show visual feedback on toggle
        document.getElementById('IsEnabled').addEventListener('change', function() {
            const label = this.closest('.form-group').querySelector('.form-text');
            if (this.checked) {
                label.innerHTML = '<span class="text-success"><i class="fas fa-check-circle"></i> QR codes will be displayed</span>';
            } else {
                label.innerHTML = 'When enabled, QR codes will appear on bills and payment pages';
            }
        });
    </script>
}
