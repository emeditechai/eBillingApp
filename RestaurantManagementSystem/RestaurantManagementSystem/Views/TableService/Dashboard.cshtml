@model TableServiceDashboardViewModel
@{
    ViewData["Title"] = "Table Service Dashboard";
}

<div class="container-fluid p-3">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>@ViewData["Title"]</h1>
        <div>
            <a asp-action="SeatGuest" class="btn btn-primary">
                <i class="fas fa-chair"></i> Seat New Guest
            </a>
            <a asp-action="ActiveTables" class="btn btn-outline-primary ms-2">
                <i class="fas fa-list"></i> View All Active Tables
            </a>
            <a asp-action="CleanupStaleTurnovers" class="btn btn-outline-warning ms-2" 
               onclick="return confirm('This will clean up old table turnovers and reset available tables. Continue?')">
                <i class="fas fa-broom"></i> Cleanup Stale Tables
            </a>
            <a asp-action="ForceResetAllTables" class="btn btn-outline-danger ms-2" 
               onclick="return confirm('This will FORCE RESET all tables to available and clear all turnovers. Are you sure?')">
                <i class="fas fa-power-off"></i> Force Reset All Tables
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row mb-3 g-3">
        <div class="col-lg-3 col-md-6">
            <div class="card border-0 text-white shadow-sm" style="background: linear-gradient(135deg, #22c55e 0%, #16a34a 100%); border-radius: 16px; overflow: hidden;">
                <div class="card-body py-3 px-4 position-relative">
                    <div class="position-absolute" style="top: -20px; right: -20px; width: 100px; height: 100px; background: rgba(255,255,255,0.1); border-radius: 50%;"></div>
                    <h6 class="card-title mb-2 fw-semibold" style="font-size: 0.9rem; opacity: 0.95;">Available Tables</h6>
                    <h2 class="mb-0 fw-bold" style="font-size: 2.5rem;">@Model.AvailableTables</h2>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="card border-0 text-white shadow-sm" style="background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%); border-radius: 16px; overflow: hidden;">
                <div class="card-body py-3 px-4 position-relative">
                    <div class="position-absolute" style="top: -20px; right: -20px; width: 100px; height: 100px; background: rgba(255,255,255,0.1); border-radius: 50%;"></div>
                    <h6 class="card-title mb-2 fw-semibold" style="font-size: 0.9rem; opacity: 0.95;">Occupied Tables</h6>
                    <h2 class="mb-0 fw-bold" style="font-size: 2.5rem;">@Model.OccupiedTables</h2>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="card border-0 text-white shadow-sm" style="background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%); border-radius: 16px; overflow: hidden;">
                <div class="card-body py-3 px-4 position-relative">
                    <div class="position-absolute" style="top: -20px; right: -20px; width: 100px; height: 100px; background: rgba(255,255,255,0.1); border-radius: 50%;"></div>
                    <h6 class="card-title mb-2 fw-semibold text-white" style="font-size: 0.9rem; opacity: 0.95;">Dirty Tables</h6>
                    <h2 class="mb-0 fw-bold" style="font-size: 2.5rem;">@Model.DirtyTables</h2>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="card border-0 text-white shadow-sm" style="background: linear-gradient(135deg, #06b6d4 0%, #0891b2 100%); border-radius: 16px; overflow: hidden;">
                <div class="card-body py-3 px-4 position-relative">
                    <div class="position-absolute" style="top: -20px; right: -20px; width: 100px; height: 100px; background: rgba(255,255,255,0.1); border-radius: 50%;"></div>
                    <h6 class="card-title mb-2 fw-semibold" style="font-size: 0.9rem; opacity: 0.95;">Waitlist / Reservations Today</h6>
                    <h2 class="mb-0 fw-bold" style="font-size: 2.5rem;">@Model.WaitlistCount / @Model.ReservationCount</h2>
                </div>
            </div>
        </div>
    </div>

    <!-- Real-Time Analytics & Performance Metrics -->
    <div class="row mt-4 g-3">
        <!-- Average Turnover Time Card -->
        <div class="col-lg-3 col-md-6">
            <div class="card border-0 shadow-sm h-100" style="border-radius: 16px; background: linear-gradient(135deg, #8b5cf6 0%, #6366f1 100%);">
                <div class="card-body text-white p-4">
                    <div class="d-flex align-items-center mb-3">
                        <div class="flex-shrink-0 me-3">
                            <div class="bg-white bg-opacity-25 rounded-circle p-3">
                                <i class="fas fa-clock fa-2x"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1">
                            <h6 class="text-white text-opacity-90 mb-1 fw-semibold" style="font-size: 0.85rem;">Avg. Turnover Time</h6>
                            <h2 class="mb-0 fw-bold">@Model.AverageTurnoverTime.ToString("0") <small style="font-size: 1rem;">min</small></h2>
                        </div>
                    </div>
                    <div class="text-white text-opacity-75" style="font-size: 0.75rem;">
                        <i class="fas fa-info-circle me-1"></i>Completed tables today
                    </div>
                </div>
            </div>
        </div>

        <!-- Today's Revenue Card -->
        <div class="col-lg-3 col-md-6">
            <div class="card border-0 shadow-sm h-100" style="border-radius: 16px; background: linear-gradient(135deg, #10b981 0%, #059669 100%);">
                <div class="card-body text-white p-4">
                    <div class="d-flex align-items-center mb-3">
                        <div class="flex-shrink-0 me-3">
                            <div class="bg-white bg-opacity-25 rounded-circle p-3">
                                <i class="fas fa-dollar-sign fa-2x"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1">
                            <h6 class="text-white text-opacity-90 mb-1 fw-semibold" style="font-size: 0.85rem;">Today's Revenue</h6>
                            <h2 class="mb-0 fw-bold">₹@Model.TodayRevenue.ToString("N0")</h2>
                        </div>
                    </div>
                    <div class="text-white text-opacity-75" style="font-size: 0.75rem;">
                        <i class="fas fa-chart-line me-1"></i>All orders today
                    </div>
                </div>
            </div>
        </div>

        <!-- Revenue Per Table Card -->
        <div class="col-lg-3 col-md-6">
            <div class="card border-0 shadow-sm h-100" style="border-radius: 16px; background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);">
                <div class="card-body text-white p-4">
                    <div class="d-flex align-items-center mb-3">
                        <div class="flex-shrink-0 me-3">
                            <div class="bg-white bg-opacity-25 rounded-circle p-3">
                                <i class="fas fa-chart-pie fa-2x"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1">
                            <h6 class="text-white text-opacity-90 mb-1 fw-semibold" style="font-size: 0.85rem;">Avg. Revenue/Table</h6>
                            <h2 class="mb-0 fw-bold">₹@Model.AverageRevenuePerTable.ToString("N0")</h2>
                        </div>
                    </div>
                    <div class="text-white text-opacity-75" style="font-size: 0.75rem;">
                        <i class="fas fa-utensils me-1"></i>Per table performance
                    </div>
                </div>
            </div>
        </div>

        <!-- Peak Hours Card -->
        <div class="col-lg-3 col-md-6">
            <div class="card border-0 shadow-sm h-100" style="border-radius: 16px; background: linear-gradient(135deg, #ec4899 0%, #db2777 100%);">
                <div class="card-body text-white p-4">
                    <div class="d-flex align-items-center mb-3">
                        <div class="flex-shrink-0 me-3">
                            <div class="bg-white bg-opacity-25 rounded-circle p-3">
                                <i class="fas fa-fire fa-2x"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1">
                            <h6 class="text-white text-opacity-90 mb-1 fw-semibold" style="font-size: 0.85rem;">Peak Hours</h6>
                            @if (Model.PeakHours.Any(p => p.IsPeakHour))
                            {
                                var peakHours = Model.PeakHours.Where(p => p.IsPeakHour).Take(2);
                                <h2 class="mb-0 fw-bold" style="font-size: 1.5rem;">@string.Join(", ", peakHours.Select(p => p.Hour.ToString()))</h2>
                            }
                            else
                            {
                                <h2 class="mb-0 fw-bold">N/A</h2>
                            }
                        </div>
                    </div>
                    <div class="text-white text-opacity-75" style="font-size: 0.75rem;">
                        <i class="fas fa-users me-1"></i>Busiest hours today
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Server Performance & Peak Hours Details -->
    <div class="row mt-4 g-3">
        <!-- Server Performance Section -->
        @if (Model.ServerPerformance.Any())
        {
            <div class="col-lg-8">
                <div class="card border-0 shadow-sm" style="border-radius: 16px;">
                    <div class="card-header bg-white border-0 py-3 px-4">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-user-tie text-primary me-2 fs-5"></i>
                            <h5 class="mb-0 fw-bold">Server Performance</h5>
                            <span class="badge bg-primary ms-2">Live</span>
                        </div>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th class="px-4 py-3">Server</th>
                                        <th class="px-4 py-3 text-center">Active Tables</th>
                                        <th class="px-4 py-3 text-center">Orders Today</th>
                                        <th class="px-4 py-3 text-end">Revenue Today</th>
                                        <th class="px-4 py-3 text-center">Workload</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var server in Model.ServerPerformance)
                                    {
                                        <tr>
                                            <td class="px-4 py-3">
                                                <div class="d-flex align-items-center">
                                                    <div class="avatar-circle bg-primary bg-opacity-10 text-primary rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 32px; height: 32px; font-weight: bold;">
                                                        @server.ServerName.Substring(0, 1).ToUpper()
                                                    </div>
                                                    <span class="fw-semibold">@server.ServerName</span>
                                                </div>
                                            </td>
                                            <td class="px-4 py-3 text-center">
                                                <span class="badge bg-info rounded-pill px-3 py-2">@server.ActiveTables</span>
                                            </td>
                                            <td class="px-4 py-3 text-center">
                                                <span class="text-muted fw-semibold">@server.TotalOrders</span>
                                            </td>
                                            <td class="px-4 py-3 text-end">
                                                <span class="fw-bold text-success">₹@server.TotalRevenue.ToString("N0")</span>
                                            </td>
                                            <td class="px-4 py-3 text-center">
                                                <span class="badge bg-@server.WorkloadColor rounded-pill px-3 py-2">
                                                    @server.WorkloadLevel.ToUpper()
                                                </span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        }

        <!-- Peak Hours Chart Section -->
        @if (Model.PeakHours.Any())
        {
            <div class="col-lg-4">
                <div class="card border-0 shadow-sm h-100" style="border-radius: 16px;">
                    <div class="card-header bg-white border-0 py-3 px-4">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-chart-bar text-warning me-2 fs-5"></i>
                            <h5 class="mb-0 fw-bold">Hourly Activity</h5>
                        </div>
                    </div>
                    <div class="card-body px-4 py-3">
                        <div class="peak-hours-list" style="max-height: 300px; overflow-y: auto;">
                            @foreach (var hour in Model.PeakHours.OrderByDescending(p => p.OrderCount))
                            {
                                var percentage = Model.PeakHours.Max(p => p.OrderCount) > 0 
                                    ? (hour.OrderCount * 100.0 / Model.PeakHours.Max(p => p.OrderCount)) 
                                    : 0;
                                <div class="mb-3">
                                    <div class="d-flex justify-content-between align-items-center mb-1">
                                        <span class="fw-semibold text-dark">@hour.HourDisplay</span>
                                        <div class="d-flex align-items-center gap-2">
                                            @if (hour.IsPeakHour)
                                            {
                                                <i class="fas fa-fire text-danger" title="Peak Hour"></i>
                                            }
                                            <span class="badge bg-secondary rounded-pill">@hour.OrderCount</span>
                                        </div>
                                    </div>
                                    <div class="progress" style="height: 8px; background-color: #f0f0f0; border-radius: 10px;">
                                        <div class="progress-bar @(hour.IsPeakHour ? "bg-danger" : "bg-primary")" 
                                             role="progressbar" 
                                             style="width: @percentage%; border-radius: 10px;" 
                                             aria-valuenow="@hour.OrderCount" 
                                             aria-valuemin="0" 
                                             aria-valuemax="@Model.PeakHours.Max(p => p.OrderCount)">
                                        </div>
                                    </div>
                                    <small class="text-muted">₹@hour.Revenue.ToString("N0")</small>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="row">
        <!-- All Tables Section -->
        <div class="col-lg-12 mt-4">
            <div class="card shadow-lg border-0" style="border-radius: 20px; overflow: hidden;">
                <div class="card-header text-white d-flex justify-content-between align-items-center" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); padding: 1.5rem; border: none;">
                    <h5 class="mb-0 fw-bold d-flex align-items-center">
                        <i class="fas fa-th-large me-3" style="font-size: 1.3rem;"></i>
                        <span style="font-size: 1.25rem; letter-spacing: 0.5px;">All Tables</span>
                    </h5>
                    <div class="d-flex gap-3 align-items-center">
                        <span class="badge" style="background: rgba(255,255,255,0.25); padding: 0.5rem 0.8rem; border-radius: 20px; font-size: 0.85rem; font-weight: 600;"><i class="fas fa-circle text-success me-1"></i>Available</span>
                        <span class="badge" style="background: rgba(255,255,255,0.25); padding: 0.5rem 0.8rem; border-radius: 20px; font-size: 0.85rem; font-weight: 600;"><i class="fas fa-circle text-info me-1"></i>Reserved</span>
                        <span class="badge" style="background: rgba(255,255,255,0.25); padding: 0.5rem 0.8rem; border-radius: 20px; font-size: 0.85rem; font-weight: 600;"><i class="fas fa-circle text-danger me-1"></i>Occupied</span>
                        <span class="badge" style="background: rgba(255,255,255,0.25); padding: 0.5rem 0.8rem; border-radius: 20px; font-size: 0.85rem; font-weight: 600;"><i class="fas fa-circle text-warning me-1"></i>Dirty</span>
                    </div>
                </div>
                <div class="card-body p-4" style="background: linear-gradient(to bottom, #f8f9fa 0%, #ffffff 100%); max-height: calc(100vh - 300px); overflow-y: auto;">
                    @if (Model.UnoccupiedTables.Any())
                    {
                        var tableCount = Model.UnoccupiedTables.Count;
                        // Auto-resize cards based on table count to fit all on one screen
                        var colClass = tableCount <= 6 ? "col-xxl-2 col-xl-2 col-lg-3 col-md-4 col-sm-6" : 
                                      tableCount <= 10 ? "col-xxl-2 col-xl-2 col-lg-2 col-md-3 col-sm-4 col-6" : 
                                      tableCount <= 15 ? "col-xxl-1 col-xl-1 col-lg-2 col-md-3 col-sm-4 col-6" :
                                      tableCount <= 20 ? "col-xxl-1 col-xl-1 col-lg-1 col-md-2 col-sm-3 col-4" :
                                      "col-1";
                        var rowGap = tableCount <= 10 ? "g-2" : tableCount <= 15 ? "g-1" : "g-1";
                        // Fully dynamic sizing based on table count
                        var iconSize = tableCount <= 6 ? "38px" : 
                                      tableCount <= 10 ? "36px" : 
                                      tableCount <= 15 ? "32px" : 
                                      tableCount <= 20 ? "28px" : "24px";
                        var iconFontSize = tableCount <= 6 ? "1rem" : 
                                          tableCount <= 10 ? "0.95rem" : 
                                          tableCount <= 15 ? "0.85rem" : 
                                          tableCount <= 20 ? "0.75rem" : "0.7rem";
                        var tableNameSize = tableCount <= 6 ? "1.1rem" : 
                                           tableCount <= 10 ? "1rem" : 
                                           tableCount <= 15 ? "0.9rem" : 
                                           tableCount <= 20 ? "0.8rem" : "0.75rem";
                        var cardPadding = tableCount <= 6 ? "0.6rem" : 
                                         tableCount <= 10 ? "0.5rem" : 
                                         tableCount <= 15 ? "0.45rem" : 
                                         tableCount <= 20 ? "0.4rem" : "0.35rem";
                        var badgeFontSize = tableCount <= 6 ? "0.7rem" : 
                                           tableCount <= 10 ? "0.65rem" : 
                                           tableCount <= 15 ? "0.6rem" : 
                                           tableCount <= 20 ? "0.55rem" : "0.5rem";
                        var buttonFontSize = tableCount <= 6 ? "0.75rem" : 
                                            tableCount <= 10 ? "0.7rem" : 
                                            tableCount <= 15 ? "0.65rem" : 
                                            tableCount <= 20 ? "0.6rem" : "0.55rem";
                        var buttonPadding = tableCount <= 10 ? "0.5rem 0.75rem" : 
                                           tableCount <= 15 ? "0.45rem 0.65rem" : 
                                           tableCount <= 20 ? "0.4rem 0.6rem" : "0.35rem 0.5rem";
                        var sectionFontSize = tableCount <= 10 ? "0.65rem" : 
                                             tableCount <= 15 ? "0.6rem" : "0.55rem";
                        var capacityIconSize = tableCount <= 10 ? "0.7rem" : 
                                              tableCount <= 15 ? "0.65rem" : "0.6rem";
                        
                        <div class="row @rowGap">
                            @foreach (var table in Model.UnoccupiedTables)
                            {
                                var isAvailable = table.Status == 0;
                                var isReserved = table.Status == 1;
                                var isOccupied = table.Status == 2;
                                var isDirty = table.Status == 3;
                                var canOrder = isAvailable || isReserved;
                                
                                var bgGradient = isAvailable ? "linear-gradient(145deg, #ffffff 0%, #f0fdf4 100%)" : 
                                                (isReserved ? "linear-gradient(145deg, #ffffff 0%, #dbeafe 100%)" : 
                                                (isOccupied ? "linear-gradient(145deg, #ffffff 0%, #fee2e2 100%)" : "linear-gradient(145deg, #ffffff 0%, #fef3c7 100%)"));
                                var borderColor = isAvailable ? "#22c55e" : (isReserved ? "#3b82f6" : (isOccupied ? "#ef4444" : "#f59e0b"));
                                var iconColor = isAvailable ? "#16a34a" : (isReserved ? "#2563eb" : (isOccupied ? "#dc2626" : "#d97706"));
                                var badgeGradient = isAvailable ? "linear-gradient(135deg, #22c55e 0%, #10b981 100%)" : 
                                                   (isReserved ? "linear-gradient(135deg, #3b82f6 0%, #2563eb 100%)" : 
                                                   (isOccupied ? "linear-gradient(135deg, #ef4444 0%, #dc2626 100%)" : "linear-gradient(135deg, #f59e0b 0%, #d97706 100%)"));
                                var statusIcon = isAvailable ? "fa-check-circle" : (isReserved ? "fa-bookmark" : (isOccupied ? "fa-user-clock" : "fa-broom"));
                                var statusText = table.StatusDisplay.ToUpper();
                                
                                <div class="@colClass">
                                    <div class="card table-card border-0 position-relative @(canOrder ? "" : "table-disabled")" style="background: @bgGradient; border: 2px solid @borderColor !important; transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1); border-radius: 16px; box-shadow: 0 6px 20px rgba(0,0,0,0.1), 0 2px 6px rgba(0,0,0,0.06); @(canOrder ? "cursor: pointer;" : "opacity: 0.7; cursor: not-allowed;") overflow: hidden; aspect-ratio: 1/1;">
                                        <!-- Decorative corner accent -->
                                        <div class="position-absolute" style="top: 0; right: 0; width: 60px; height: 60px; background: @badgeGradient; opacity: 0.12; clip-path: polygon(100% 0, 100% 100%, 0 0); z-index: 1;"></div>
                                        
                                        <div class="card-body text-center d-flex flex-column justify-content-between" style="position: relative; z-index: 2; padding: @cardPadding; height: 100%;">
                                            <!-- Top Section: Icon & Table Name -->
                                            <div class="mb-1">
                                                <div class="table-icon-wrapper d-inline-flex align-items-center justify-content-center mb-1" style="width: @iconSize; height: @iconSize; background: @badgeGradient; border-radius: 12px; box-shadow: 0 3px 12px rgba(0,0,0,0.12); transform: rotate(-4deg); transition: all 0.3s ease;">
                                                    <i class="fas fa-utensils" style="font-size: @iconFontSize; color: #ffffff; filter: drop-shadow(0 2px 4px rgba(0,0,0,0.2)); transform: rotate(4deg);"></i>
                                                </div>
                                                <h3 class="table-name fw-bold mb-0" style="color: #1a1a1a; font-size: @tableNameSize; letter-spacing: 0.3px; font-family: 'Segoe UI', system-ui, sans-serif; text-shadow: 0 1px 3px rgba(0,0,0,0.05);">@table.TableName</h3>
                                                @if (!string.IsNullOrEmpty(table.Section))
                                                {
                                                    <div class="d-inline-block px-2 py-1 mb-1" style="background: rgba(0,0,0,0.05); border-radius: 6px; font-size: @sectionFontSize; color: #666; font-weight: 600;">
                                                        <i class="fas fa-map-marker-alt me-1" style="font-size: @sectionFontSize;"></i>@table.Section
                                                    </div>
                                                }
                                            </div>
                                            
                                            <!-- Middle Section: Capacity -->
                                            <div class="mb-1">
                                                <div class="d-inline-flex align-items-center gap-1 px-2 py-1" style="background: rgba(0,0,0,0.04); border-radius: 8px; font-size: @badgeFontSize; color: #495057; font-weight: 600;">
                                                    <i class="fas fa-users" style="color: @iconColor; font-size: @capacityIconSize;"></i>
                                                    <span>@table.Capacity</span>
                                                </div>
                                            </div>
                                            
                                            <!-- Status Badge -->
                                            <div class="mb-1">
                                                <span class="badge text-white fw-bold px-2 py-1 w-100" style="font-size: @badgeFontSize; border-radius: 8px; background: @badgeGradient; box-shadow: 0 2px 8px rgba(0,0,0,0.15); border: 1.5px solid rgba(255,255,255,0.3); letter-spacing: 0.2px;">
                                                    <i class="fas @statusIcon me-1" style="font-size: @badgeFontSize;"></i>@statusText
                                                </span>
                                            </div>
                                            
                                            <!-- Bottom Section: Action Button -->
                                            <div>
                                                @if (canOrder)
                                                {
                                                    <a href="@Url.Action("Create", "Order", new { tableId = table.Id })" 
                                                       class="btn fw-bold text-white create-order-btn w-100" style="background: @badgeGradient; font-size: @buttonFontSize; padding: @buttonPadding; border-radius: 8px; border: none; box-shadow: 0 2px 8px rgba(0,0,0,0.2); text-transform: uppercase; letter-spacing: 0.3px; font-weight: 700; transition: all 0.3s ease;">
                                                        <i class="fas fa-plus me-1" style="font-size: @badgeFontSize;"></i>Order
                                                    </a>
                                                }
                                                else
                                                {
