@model List<ActiveTableViewModel>
@{
    ViewData["Title"] = "Active Tables";
}

<div class="container-fluid p-3">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>@ViewData["Title"]</h1>
        <div>
            <a asp-action="Dashboard" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left"></i> Back to Dashboard
            </a>
            <a asp-action="SeatGuest" class="btn btn-primary ms-2">
                <i class="fas fa-chair"></i> Seat New Guest
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover" id="activeTables">
                                <thead>
                                    <tr>
                                        <th>Table <small class="text-muted">(+ Merged)</small></th>
                                        <th>Guest</th>
                                        <th>Party Size</th>
                                        <th>Cashier</th>
                                        <th>Status</th>
                                        <th>Seated</th>
                                        <th>Duration</th>
                                        <th>Service Started</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var table in Model)
                                    {
                                        <tr class="@(table.IsOverTargetTime ? "table-danger" : "") @(table.IsPartOfMergedOrder ? "table-info" : "")">
                                            <td>
                                                @if (table.IsPartOfMergedOrder)
                                                {
                                                    <span class="badge bg-primary me-1">
                                                        <i class="fas fa-link"></i> MERGED
                                                    </span>
                                                }
                                                <strong>@table.TableName</strong>
                                                @if (table.IsPartOfMergedOrder && !string.IsNullOrEmpty(table.MergedTableNames))
                                                {
                                                    <br><small class="text-primary fw-bold">
                                                        <i class="fas fa-table"></i> Combined: @table.MergedTableNames
                                                    </small>
                                                }
                                            </td>
                                            <td>@table.GuestName</td>
                                            <td>@table.PartySize</td>
                                            <td>@table.ServerName</td>
                                            <td>@table.StatusText</td>
                                            <td>@table.SeatedAt.ToString("HH:mm")</td>
                                            <td class="@table.TimerClass">@table.DurationDisplay</td>
                                            <td>@(table.StartedServiceAt.HasValue ? table.StartedServiceAt.Value.ToString("HH:mm") : "-")</td>
                                            <td>
                                                <div class="btn-group">
                                                    <button type="button" class="btn btn-sm btn-outline-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false"
                                                            title="@(table.IsPartOfMergedOrder ? "Actions will affect all merged tables: " + table.MergedTableNames : "Update table status")">
                                                        Update Status
                                                        @if (table.IsPartOfMergedOrder)
                                                        {
                                                            <i class="fas fa-link ms-1" style="font-size: 0.8em;"></i>
                                                        }
                                                    </button>
                                                    <ul class="dropdown-menu">
                                                        @if (table.Status < 1)
                                                        {
                                                            <li>
                                                                <form asp-action="UpdateTableStatus" method="post">
                                                                    <input type="hidden" name="turnoverId" value="@table.TurnoverId" />
                                                                    <input type="hidden" name="newStatus" value="1" />
                                                                    <button type="submit" class="dropdown-item">Start Service</button>
                                                                </form>
                                                            </li>
                                                        }
                                                        @if (table.Status < 2)
                                                        {
                                                            <li>
                                                                <form asp-action="UpdateTableStatus" method="post">
                                                                    <input type="hidden" name="turnoverId" value="@table.TurnoverId" />
                                                                    <input type="hidden" name="newStatus" value="2" />
                                                                    <button type="submit" class="dropdown-item">Check Requested</button>
                                                                </form>
                                                            </li>
                                                        }
                                                        @if (table.Status < 3)
                                                        {
                                                            <li>
                                                                <form asp-action="UpdateTableStatus" method="post">
                                                                    <input type="hidden" name="turnoverId" value="@table.TurnoverId" />
                                                                    <input type="hidden" name="newStatus" value="3" />
                                                                    <button type="submit" class="dropdown-item">Mark as Paid</button>
                                                                </form>
                                                            </li>
                                                        }
                                                        @* "Mark as Completed" removed to enforce automatic completion when no due *@
                                                        @if (table.Status < 5)
                                                        {
                                                            <li>
                                                                <form asp-action="UpdateTableStatus" method="post">
                                                                    <input type="hidden" name="turnoverId" value="@table.TurnoverId" />
                                                                    <input type="hidden" name="newStatus" value="5" />
                                                                    <button type="submit" class="dropdown-item">Mark as Departed</button>
                                                                </form>
                                                            </li>
                                                        }
                                                    </ul>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            No active tables at the moment.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#activeTables').DataTable({
                order: [[6, 'desc']],  // Sort by duration by default
                pageLength: 25,
                stateSave: true
            });

            // Auto-refresh the page every 2 minutes
            setTimeout(function() {
                location.reload();
            }, 120000);
        });
    </script>
}
