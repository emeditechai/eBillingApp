@model RestaurantManagementSystem.Models.EstimationViewModel
@{
    ViewData["Title"] = "Menu Items & Estimation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/estimation.css" asp-append-version="true" />
}

@section Scripts {
    <script src="~/js/estimation.js" asp-append-version="true"></script>
}

<div class="estimation-page">
    <!-- Page Header -->
    <div class="page-header">
        <h1><i class="fas fa-calculator me-2"></i>Menu Items & Estimation</h1>
        <p>Select items and quantities to generate a professional estimate</p>
    </div>

    <!-- Search and Filter Controls -->
    <div class="controls-section">
        <div class="row g-2">
            <div class="col-md-3">
                <input type="text" id="menuItemSearch" class="form-control form-control-sm" placeholder="ðŸ” Search menu items...">
            </div>
            <div class="col-md-2">
                <select id="categoryFilter" class="form-select form-select-sm">
                    <option value="all">All Categories</option>
                </select>
            </div>
            <div class="col-md-2">
                <select id="subCategoryFilter" class="form-select form-select-sm">
                    <option value="all">All SubCategories</option>
                </select>
            </div>
            <div class="col-md-2">
                <select id="priceTypeFilter" class="form-select form-select-sm" title="Select price type">
                    <option value="base">Base Price</option>
                    <option value="takeout">B2C Price</option>
                    <option value="delivery">Delivery Price</option>
                    <option value="roomService">Room Service Price</option>
                </select>
            </div>
            <div class="col-md-3">
                <button id="estimateBtn" class="btn btn-success btn-sm w-100">
                    <i class="fas fa-calculator me-1"></i>Generate Estimate
                </button>
            </div>
        </div>
    </div>

    <!-- Two-column content: left = menu + estimation table, right = totals/summary -->
    <div class="content-grid">
        <div class="main-col">
            <!-- Menu Items Section (left column) -->
            <div class="menu-section mb-4">
                <div class="menu-header">
                    <h3><i class="fas fa-utensils me-2"></i>Menu Items</h3>
                </div>
                <div class="table-responsive">
                    <table id="menuItemsTable" class="table table-hover table-compact mb-0">
                        <thead>
                            <tr>
                                <th width="30%">Item Name</th>
                                <th width="12%">Price</th>
                                <th width="15%">Category</th>
                                <th width="15%">SubCategory</th>
                                <th width="13%">Item Code</th>
                                <th width="15%">Quantity</th>
                            </tr>
                        </thead>
                        <tbody id="menuItemsTableBody">
                            <tr>
                                <td colspan="6" class="text-center py-4">
                                    <div class="loading-spinner mx-auto"></div>
                                    <div class="mt-2">Loading menu items...</div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Estimation Section (left column: shows itemized estimation) -->
            <div class="estimation-section" style="display: none;">
                <div class="estimation-header">
                    <h4><i class="fas fa-receipt me-2"></i>Order Estimation</h4>
                    <div class="d-flex align-items-center gap-2 actions">
                        <button id="clearEstimateBtn" class="btn btn-outline-secondary btn-sm">
                            <i class="fas fa-rotate-left me-1"></i>Reset
                        </button>
                        <button id="printEstimateBtn" class="btn btn-primary btn-sm">
                            <i class="fas fa-print me-1"></i>Print
                        </button>
                    </div>
                </div>

                <div class="estimation-body">
                    <div class="estimation-summary shadow-sm">
                        <div class="table-responsive">
                            <table class="table table-sm table-borderless align-middle mb-0 estimation-table">
                                <thead>
                                    <tr>
                                        <th width="45%">Item</th>
                                        <th width="20%" class="text-end">Unit Price</th>
                                        <th width="15%" class="text-center">Qty</th>
                                        <th width="20%" class="text-end">Amount</th>
                                    </tr>
                                </thead>
                                <tbody id="estimationTableBody"></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right column: totals and actions (sticky on large screens) -->
        <aside class="aside-col">
            <div class="estimate-totals card shadow-sm">
                <div class="card-header py-2 bg-white border-bottom-0">
                    <h6 class="mb-0 fw-semibold text-primary"><i class="fas fa-balance-scale me-1"></i>Summary</h6>
                </div>
                <div class="card-body pt-2 pb-3">
                    <div class="d-flex justify-content-between small mb-1"><span>Subtotal</span><span id="subtotalValue">â‚¹0.00</span></div>
                    <!-- GST removed from estimation display intentionally -->
                    <hr class="my-2" />
                    <div class="d-flex justify-content-between fw-bold"><span>Total</span><span id="grandTotalValue">â‚¹0.00</span></div>
                </div>
                <div class="card-footer bg-light py-2 text-center">
                    <small class="text-muted" id="estimateMeta">No items selected</small>
                </div>
            </div>
            <div class="print-hint small text-muted mt-2">Use Print to generate a clean customer-facing estimate.</div>
        </aside>
    </div>
</div>
