@model IEnumerable<RestaurantManagementSystem.Models.GuestFeedback>
@{
    ViewData["Title"] = "Feedback Summary";
    var summary = ViewBag.Summary as RestaurantManagementSystem.Models.GuestFeedbackSummary;
}

<style>
    .feedback-summary-wrapper {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
        padding: 20px;
    }
    .feedback-summary-container {
        background: rgba(255,255,255,0.95);
        border-radius: 20px;
        padding: 30px;
        box-shadow: 0 20px 60px rgba(0,0,0,0.3);
    }
    h2 {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        font-weight: 700;
    }
    .card {
        border: none;
        border-radius: 15px;
        overflow: hidden;
        transition: all 0.3s;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
    }
    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 35px rgba(102,126,234,0.4);
    }
    .card-body {
        background: transparent;
    }
    .card .small {
        color: white !important;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        font-size: 0.75rem;
    }
    .card .h4 {
        font-size: 2.5rem;
        font-weight: 700;
        text-shadow: 0 2px 10px rgba(0,0,0,0.2);
        color: white !important;
    }
    /* Different gradient for each card */
    .card:nth-child(1) {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }
    .card:nth-child(2) {
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
    }
    .card:nth-child(3) {
        background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
    }
    .card:nth-child(4) {
        background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
    }
    .card:nth-child(5) {
        background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
    }
    .card:nth-child(6) {
        background: linear-gradient(135deg, #30cfd0 0%, #330867 100%);
    }
    .card:nth-child(7) {
        background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
    }
    .card:nth-child(8) {
        background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%);
    }
    .card:nth-child(9) {
        background: linear-gradient(135deg, #ff9a9e 0%, #fecfef 100%);
    }
    .table {
        background: white;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    }
    .card-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
        color: white;
        border: none;
        padding: 20px;
    }
    .card-header .fw-bold {
        font-size: 1.2rem;
    }
    .table thead {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
    }
    .table thead th {
        border: none !important;
        font-weight: 700 !important;
        padding: 15px 10px !important;
        color: #ffffff !important;
        background: transparent !important;
        font-size: 0.9rem !important;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }
    .table-light thead th {
        color: #ffffff !important;
        background: transparent !important;
    }
    .table tbody tr {
        transition: all 0.3s;
        background: white;
    }
    .table tbody tr td {
        color: #333 !important;
        font-weight: 500;
        padding: 12px 10px;
        vertical-align: middle;
    }
    .table tbody tr:hover {
        background: linear-gradient(to right, #f8f9ff 0%, #fff 100%) !important;
        transform: scale(1.01);
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    }
    .table tbody tr:hover td {
        color: #000 !important;
    }
    .table {
        background: white;
    }
    .btn-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        padding: 10px 25px;
        font-weight: 600;
        transition: all 0.3s;
        box-shadow: 0 4px 15px rgba(102,126,234,0.4);
    }
    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(102,126,234,0.6);
    }
    .btn-outline-secondary {
        border-color: #667eea !important;
        color: #667eea !important;
        transition: all 0.3s;
        background: white !important;
        font-size: 0.75rem;
        padding: 2px 8px;
    }
    .btn-outline-secondary:hover {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
        border-color: #667eea !important;
        color: white !important;
        transform: scale(1.05);
    }
    .btn-xs {
        font-size: 0.7rem;
        padding: 2px 6px;
    }
    .modal-content {
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 20px 60px rgba(0,0,0,0.3);
    }
    .modal-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border: none;
    }
    .modal-body .table thead {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }
    .text-primary {
        color: #667eea !important;
    }
    .table .small {
        font-size: 0.85rem;
        color: #333 !important;
    }
    .table tbody tr:nth-child(even) {
        background: #f9f9f9;
    }
    .table tbody tr:nth-child(even):hover {
        background: linear-gradient(to right, #f8f9ff 0%, #fff 100%) !important;
    }
</style>

<div class="feedback-summary-wrapper">
<div class="feedback-summary-container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="d-flex align-items-center gap-2"><i class="fas fa-chart-line"></i> Guest Feedback Summary</h2>
        <a asp-action="Form" class="btn btn-sm btn-primary" target="_blank"><i class="fas fa-plus me-1"></i> New Feedback</a>
    </div>
    <div class="row g-3 mb-4">
        <div class="col-md-2">
            <div class="card shadow-sm">
                <div class="card-body text-center p-2">
                    <div class="small">Total</div>
                    <div class="h4 mb-0">@summary?.TotalFeedback</div>
                </div>
            </div>
        </div>
        <div class="col-md-2" >
            <div class="card shadow-sm">
                <div class="card-body text-center p-2">
                    <div class="small">Overall</div>
                    <div class="h4 mb-0">@summary?.AvgOverall</div>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card shadow-sm">
                <div class="card-body text-center p-2">
                    <div class="small">Food</div>
                    <div class="h4 mb-0">@summary?.AvgFood</div>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card shadow-sm">
                <div class="card-body text-center p-2">
                    <div class="small">Service</div>
                    <div class="h4 mb-0">@summary?.AvgService</div>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card shadow-sm">
                <div class="card-body text-center p-2">
                    <div class="small">Cleanliness</div>
                    <div class="h4 mb-0">@summary?.AvgCleanliness</div>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card shadow-sm">
                <div class="card-body text-center p-2">
                    <div class="small">Staff</div>
                    <div class="h4 mb-0">@summary?.AvgStaff</div>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card shadow-sm">
                <div class="card-body text-center p-2">
                    <div class="small">Ambience</div>
                    <div class="h4 mb-0">@summary?.AvgAmbience</div>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card shadow-sm">
                <div class="card-body text-center p-2">
                    <div class="small">Value</div>
                    <div class="h4 mb-0">@summary?.AvgValue</div>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card shadow-sm">
                <div class="card-body text-center p-2">
                    <div class="small">Speed</div>
                    <div class="h4 mb-0">@summary?.AvgSpeed</div>
                </div>
            </div>
        </div>
    </div>
    <div class="card shadow-sm">
        <div class="card-header bg-white d-flex justify-content-between align-items-center">
            <span class="fw-bold"><i class="fas fa-stream me-1 text-primary"></i> Recent Feedback</span>
        </div>
        <div class="table-responsive">
            <table class="table table-sm table-hover mb-0">
                <thead>
                    <tr>
                        <th style="color: white !important;">Date</th>
                        <th style="color: white !important;">Overall</th>
                        <th style="color: white !important;">Food</th>
                        <th style="color: white !important;">Service</th>
                        <th style="color: white !important;">Cleanliness</th>
                        <th style="color: white !important;">Staff</th>
                        <th style="color: white !important;">Ambience</th>
                        <th style="color: white !important;">Value</th>
                        <th style="color: white !important;">Speed</th>
                        <th style="color: white !important;">Location</th>
                        <th style="color: white !important;">First Visit</th>
                        <th style="color: white !important;">Tags</th>
                        <th style="color: white !important;">Comments</th>
                        <th style="color: white !important;">Guest</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var f in Model)
                {
                    <tr>
                        <td>@f.VisitDate.ToString("dd MMM")</td>
                        <td>@f.OverallRating</td>
                        <td>@(f.FoodRating ?? 0)</td>
                        <td>@(f.ServiceRating ?? 0)</td>
                        <td>@(f.CleanlinessRating ?? 0)</td>
                        <td>@(f.StaffRating ?? 0)</td>
                        <td>@(f.AmbienceRating ?? 0)</td>
                        <td>@(f.ValueRating ?? 0)</td>
                        <td>@(f.SpeedRating ?? 0)</td>
                        <td class="small">@f.Location</td>
                        <td class="small">@(f.FirstVisit == true ? "Yes" : f.FirstVisit == false ? "No" : "")</td>
                        <td class="small">@f.Tags</td>
                        <td class="small" style="max-width:250px; white-space:nowrap; overflow:hidden; text-overflow:ellipsis;" title="@f.Comments">@f.Comments</td>
                        <td class="small">
                            @f.GuestName
                            @if (!string.IsNullOrEmpty(f.SurveyJson) && f.SurveyJson != "{}")
                            {
                                <br/><button type="button" class="btn btn-xs btn-outline-secondary mt-1" onclick="showSurvey('@f.Id', @Html.Raw(System.Text.Json.JsonSerializer.Serialize(f.SurveyJson)))"><i class="fas fa-list-check"></i> Survey</button>
                            }
                        </td>
                    </tr>
                }
                @if(!Model.Any())
                {
                    <tr><td colspan="14" class="text-center text-muted">No feedback records</td></tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Survey Detail Modal -->
<div class="modal fade" id="surveyModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fas fa-list-check me-2"></i>Detailed Survey Responses</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <table class="table table-sm table-bordered" id="surveyTable">
                    <thead class="table-light">
                        <tr>
                            <th>Question</th>
                            <th class="text-center" style="width:150px">Response</th>
                        </tr>
                    </thead>
                    <tbody id="surveyTableBody"></tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
    const surveyQuestions = {
        q1: "I was seated promptly",
        q2: "The host/hostess was polite",
        q3: "The cashier was polite",
        q4: "The cashier was always available",
        q5: "The menu was easy to read",
        q6: "I was satisfied with the selection of food",
        q7: "My order was taken promptly",
        q8: "My order was taken correctly",
        q9: "My order was prepared and served promptly",
        q10: "The food tasted fresh"
    };
    const responseLabels = {5: 'Strongly Agree', 4: 'Agree', 3: 'Neutral', 2: 'Disagree', 1: 'Strongly Disagree'};

    function showSurvey(id, jsonStr) {
        try {
            const data = JSON.parse(jsonStr);
            const tbody = document.getElementById('surveyTableBody');
            tbody.innerHTML = '';
            for (const [key, value] of Object.entries(data)) {
                const question = surveyQuestions[key] || key;
                const response = responseLabels[value] || value;
                tbody.innerHTML += `<tr><td>${question}</td><td class="text-center">${response}</td></tr>`;
            }
            new bootstrap.Modal(document.getElementById('surveyModal')).show();
        } catch(e) {
            alert('Error displaying survey: ' + e.message);
        }
    }
</script>
}
</div>
</div>
