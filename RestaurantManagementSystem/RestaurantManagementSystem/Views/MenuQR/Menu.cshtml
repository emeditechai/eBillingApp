@model PublicMenuViewModel
@{
    ViewData["Title"] = "Menu - " + Model.RestaurantInfo.Name;
    Layout = null; // Use a clean layout for public view
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" />
    <style>
        :root {
            --qr-bg: #f6f8fb;
            --qr-text: #1f2a37;
            --qr-muted: #6b7280;
            --qr-card: #ffffff;
            --qr-border: #e5e7eb;
            --qr-shadow: 0 10px 30px rgba(15, 23, 42, 0.08);
            --qr-accent: #2563eb;
            --qr-accent-2: #7c3aed;
            --qr-success: #16a34a;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
            background: radial-gradient(1200px 600px at 20% -10%, rgba(37,99,235,0.12), transparent 60%),
                        radial-gradient(900px 500px at 95% 0%, rgba(124,58,237,0.10), transparent 55%),
                        var(--qr-bg);
            margin: 0;
            padding: 0;
            line-height: 1.5;
            color: var(--qr-text);
        }
        
        .restaurant-header {
            background: linear-gradient(135deg, rgba(17, 24, 39, 0.92) 0%, rgba(30, 41, 59, 0.92) 55%, rgba(17, 24, 39, 0.92) 100%);
            color: #fff;
            padding: 1.1rem 0;
            margin-bottom: 1rem;
            box-shadow: 0 12px 30px rgba(0,0,0,0.18);
            position: sticky;
            top: 0;
            z-index: 1000;
            backdrop-filter: blur(10px);
        }

        .header-actions {
            display: flex;
            justify-content: flex-end;
            align-items: center;
            gap: 0.5rem;
        }

        .icon-action {
            border: 1px solid rgba(255,255,255,0.18);
            background: rgba(255,255,255,0.08);
            color: #fff;
            width: 40px;
            height: 40px;
            border-radius: 10px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 8px 20px rgba(0,0,0,0.18);
            transition: transform 0.15s ease, background 0.15s ease;
            text-decoration: none;
        }

        .icon-action:hover {
            transform: translateY(-1px);
            background: rgba(255,255,255,0.14);
            color: #fff;
        }
        
        .restaurant-logo {
            width: 64px;
            height: 64px;
            border-radius: 14px;
            border: 2px solid rgba(255,255,255,0.22);
            object-fit: cover;
            box-shadow: 0 10px 25px rgba(0,0,0,0.25);
            transition: transform 0.3s ease;
        }
        
        .restaurant-logo:hover {
            transform: scale(1.05);
        }
        
        .restaurant-info h1 {
            font-size: 1.5rem;
            font-weight: 700;
            margin-bottom: 0.3rem;
            text-shadow: 0 1px 3px rgba(0,0,0,0.3);
            letter-spacing: -0.5px;
        }
        
        .contact-info {
            font-size: 0.85rem;
            opacity: 0.92;
            display: flex;
            flex-wrap: wrap;
            gap: 1rem;
        }
        
        .contact-info i {
            margin-right: 0.4rem;
            width: 14px;
            text-align: center;
        }
        
        .table-info {
            background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%);
            padding: 0.75rem 1rem;
            border-radius: 8px;
            text-align: center;
            margin-top: 0.75rem;
            font-weight: 600;
            box-shadow: 0 2px 8px rgba(231,76,60,0.3);
        }
        
        .menu-category {
            background: var(--qr-card);
            border-radius: 12px;
            box-shadow: var(--qr-shadow);
            margin-bottom: 1rem;
            overflow: hidden;
            border: 1px solid var(--qr-border);
        }
        
        .category-header {
            background: linear-gradient(135deg, rgba(37,99,235,0.98) 0%, rgba(124,58,237,0.98) 100%);
            color: white;
            padding: 1rem 1.25rem;
            border-bottom: 1px solid rgba(255,255,255,0.1);
        }
        
        .category-header h3 {
            margin: 0;
            font-size: 1.25rem;
            font-weight: 600;
            letter-spacing: -0.3px;
        }
        
        .category-description {
            margin-top: 0.3rem;
            opacity: 0.9;
            font-size: 0.8rem;
            font-weight: 400;
        }
        
        .menu-items {
            padding: 0;
        }
        
        .menu-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 0.75rem 1.25rem;
            border-bottom: 1px solid #f1f3f4;
            transition: background-color 0.2s ease;
        }
        
        .menu-item:hover {
            background-color: #f8f9fa;
        }
        
        .menu-item:last-child {
            border-bottom: none;
        }
        
        .menu-item-info {
            flex: 1;
            margin-right: 1rem;
        }
        
        .menu-item-name {
            font-size: 1rem;
            font-weight: 600;
            color: #2c3e50;
            margin-bottom: 0.2rem;
            display: flex;
            align-items: center;
            line-height: 1.3;
        }
        
        .menu-item-badges {
            margin-left: 0.5rem;
        }
        
        .badge-veg {
            background: #27ae60;
            color: white;
            font-size: 0.65rem;
            padding: 0.15rem 0.35rem;
            border-radius: 8px;
            margin-left: 0.25rem;
            font-weight: 600;
        }
        
        .badge-spicy {
            background: #e74c3c;
            color: white;
            font-size: 0.65rem;
            padding: 0.15rem 0.35rem;
            border-radius: 8px;
            margin-left: 0.25rem;
            font-weight: 600;
        }
        
        .menu-item-description {
            color: #6c757d;
            font-size: 0.85rem;
            line-height: 1.3;
            margin-bottom: 0;
        }
        
        .menu-item-price {
            font-size: 1.1rem;
            font-weight: 700;
            color: var(--qr-success);
            white-space: nowrap;
            background: rgba(22,163,74,0.10);
            padding: 0.3rem 0.6rem;
            border-radius: 6px;
            border: 1px solid rgba(22,163,74,0.22);
        }
        
        .menu-item-image {
            width: 60px;
            height: 60px;
            border-radius: 8px;
            object-fit: cover;
            margin-left: 0.75rem;
            box-shadow: 0 1px 4px rgba(0,0,0,0.1);
        }
        
        .menu-item.unavailable {
            opacity: 0.6;
            background-color: #f8f9fa !important;
        }
        
        .menu-item.unavailable .menu-item-name {
            color: #6c757d;
            text-decoration: line-through;
        }
        
        .menu-item.unavailable .menu-item-price {
            background: #f1f3f4;
            color: #6c757d;
            border-color: #dee2e6;
        }
        
        .unavailable-badge {
            background: #6c757d;
            color: white;
            font-size: 0.65rem;
            padding: 0.15rem 0.35rem;
            border-radius: 8px;
            margin-left: 0.25rem;
            font-weight: 600;
        }
        
        .no-items {
            text-align: center;
            color: #6c757d;
            font-style: italic;
            padding: 2rem 1.25rem;
            font-size: 0.9rem;
        }
        
        .footer-info {
            background: var(--qr-card);
            padding: 1.5rem;
            margin-top: 2rem;
            border-radius: 12px;
            text-align: center;
            box-shadow: var(--qr-shadow);
            border: 1px solid var(--qr-border);
        }
        
        .footer-info h5 {
            color: #2c3e50;
            margin-bottom: 1rem;
            font-size: 1.1rem;
        }
        
        .footer-info p {
            font-size: 0.85rem;
            color: #6c757d;
            margin-bottom: 0.5rem;
        }
        
        .qr-timestamp {
            font-size: 0.75rem;
            color: #95a5a6;
            margin-top: 1rem;
            padding-top: 1rem;
            border-top: 1px solid #ecf0f1;
        }
        
        .container {
            max-width: 600px;
            padding: 0 1rem;
        }
        
        .table-info {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 0.75rem 1rem;
            border-radius: 8px;
            margin-top: 0.75rem;
            text-align: center;
            font-weight: 600;
            box-shadow: 0 2px 8px rgba(0,0,0,0.15);
        }
        
        @@media (max-width: 768px) {
            .restaurant-info h1 {
                font-size: 1.8rem;
            }
            
            .menu-item {
                flex-direction: column;
                align-items: flex-start;
            }
            
            .menu-item-price {
                margin-top: 0.5rem;
                font-size: 1.1rem;
            }
            
            .menu-item-image {
                margin-left: 0;
                margin-top: 0.5rem;
            }
        }

        .export-overlay {
            position: fixed;
            inset: 0;
            background: rgba(17, 24, 39, 0.55);
            display: none;
            align-items: center;
            justify-content: center;
            z-index: 2000;
            backdrop-filter: blur(6px);
        }

        .export-overlay .card {
            width: min(420px, 92vw);
            border: 1px solid rgba(255,255,255,0.12);
            box-shadow: 0 20px 60px rgba(0,0,0,0.35);
        }

        .exporting .no-export {
            display: none !important;
        }

        /* Help html2pdf avoid splitting cards in the middle */
        .menu-category, .menu-item {
            break-inside: avoid;
            page-break-inside: avoid;
        }
    </style>
</head>
<body>
    <div class="export-overlay" id="exportOverlay" aria-hidden="true">
        <div class="card">
            <div class="card-body d-flex align-items-center gap-3">
                <div class="spinner-border text-primary" role="status" aria-label="Generating PDF"></div>
                <div>
                    <div class="fw-semibold">Preparing your menu PDF…</div>
                    <div class="small text-muted">Please wait a moment.</div>
                </div>
            </div>
        </div>
    </div>

    <div id="menuExportRoot">
        <div class="restaurant-header sticky-header">
            <div class="container">
                <div class="row align-items-center g-2">
                    <div class="col-auto">
                    @if (!string.IsNullOrEmpty(Model.RestaurantInfo.LogoUrl))
                    {
                        <img src="@Model.RestaurantInfo.LogoUrl" alt="Restaurant Logo" class="restaurant-logo" />
                    }
                    else
                    {
                        <div class="restaurant-logo bg-light d-flex align-items-center justify-content-center">
                            <i class="fas fa-utensils fa-2x text-primary"></i>
                        </div>
                    }
                    </div>
                    <div class="col">
                        <div class="restaurant-info">
                            <div class="d-flex align-items-start justify-content-between gap-2">
                                <div>
                                    <h1 class="mb-1">@Model.RestaurantInfo.Name</h1>
                                    <div class="contact-info">
                                        <div><i class="fas fa-phone"></i>@Model.RestaurantInfo.ContactNumber</div>
                                        <div><i class="fas fa-map-marker-alt"></i>@Model.RestaurantInfo.Address</div>
                                    </div>
                                    @if (!string.IsNullOrEmpty(Model.RestaurantInfo.Description))
                                    {
                                        <div class="mt-2 small" style="opacity:0.92"><i class="fas fa-quote-left me-1"></i>@Model.RestaurantInfo.Description</div>
                                    }
                                </div>

                                <div class="header-actions no-export">
                                    <a href="#" class="icon-action" id="exportPdfBtn" title="Download PDF" aria-label="Download PDF">
                                        <i class="fas fa-file-pdf"></i>
                                    </a>
                                </div>
                            </div>

                            @if (Model.IsTableSpecific && !string.IsNullOrEmpty(Model.TableName))
                            {
                                <div class="table-info">
                                    <i class="fas fa-table me-2"></i>
                                    <strong>@Model.TableName</strong>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="container">
        @if (Model.MenuGroups != null && Model.MenuGroups.Any())
        {
            foreach (var group in Model.MenuGroups)
            {
                <div class="mb-3">
                    <h2 class="mb-3" style="font-weight:800;color:#2c3e50">
                        <i class="fas fa-layer-group me-2 text-primary"></i>@group.GroupName
                    </h2>
                    @foreach (var category in group.Categories)
                    {
                        <div class="menu-category">
                            <div class="category-header">
                                <h3>@category.CategoryName</h3>
                                @if (!string.IsNullOrEmpty(category.CategoryDescription))
                                {
                                    <div class="category-description">@category.CategoryDescription</div>
                                }
                            </div>
                            @if (category.SubCategories != null && category.SubCategories.Any())
                            {
                                foreach (var subcat in category.SubCategories)
                                {
                                    <div class="ps-3 pb-2 pt-2">
                                        @if (!string.IsNullOrEmpty(subcat.SubCategoryName))
                                        {
                                            <h5 class="fw-bold mb-2" style="color:#2980b9">@subcat.SubCategoryName</h5>
                                        }
                                        <div class="menu-items">
                                            @if (subcat.MenuItems.Any())
                                            {
                                                foreach (var item in subcat.MenuItems)
                                                {
                                                    <div class="menu-item @(item.IsAvailable ? string.Empty : "unavailable")">
                                                        <div class="menu-item-info">
                                                            <div class="menu-item-name">
                                                                @item.Name
                                                                <div class="menu-item-badges">
                                                                    @if (!item.IsAvailable)
                                                                    {
                                                                        <span class="unavailable-badge">UNAVAILABLE</span>
                                                                    }
                                                                    @if (item.IsVegetarian)
                                                                    {
                                                                        <span class="badge-veg"><i class="fas fa-leaf"></i> VEG</span>
                                                                    }
                                                                    @if (item.IsSpicy)
                                                                    {
                                                                        <span class="badge-spicy"><i class="fas fa-fire"></i> SPICY</span>
                                                                    }
                                                                </div>
                                                            </div>
                                                            @if (!string.IsNullOrEmpty(item.Description))
                                                            {
                                                                <div class="menu-item-description">@item.Description</div>
                                                            }
                                                        </div>
                                                        <div class="menu-item-price">₹@item.Price.ToString("0.00")</div>
                                                        <img src="@(string.IsNullOrEmpty(item.ImageUrl) ? "/images/placeholder-dish.png" : item.ImageUrl)" alt="@item.Name" class="menu-item-image" onerror="this.onerror=null;this.src='/images/placeholder-dish.png';" />
                                                    </div>
                                                }
                                            }
                                        </div>
                                    </div>
                                }
                            }
                            @if ((category.SubCategories == null || !category.SubCategories.Any()) && category.MenuItems != null && category.MenuItems.Any())
                            {
                                <div class="menu-items">
                                    @foreach (var item in category.MenuItems)
                                    {
                                        <div class="menu-item @(item.IsAvailable ? string.Empty : "unavailable")">
                                            <div class="menu-item-info">
                                                <div class="menu-item-name">
                                                    @item.Name
                                                    <div class="menu-item-badges">
                                                        @if (!item.IsAvailable)
                                                        {
                                                            <span class="unavailable-badge">UNAVAILABLE</span>
                                                        }
                                                        @if (item.IsVegetarian)
                                                        {
                                                            <span class="badge-veg"><i class="fas fa-leaf"></i> VEG</span>
                                                        }
                                                        @if (item.IsSpicy)
                                                        {
                                                            <span class="badge-spicy"><i class="fas fa-fire"></i> SPICY</span>
                                                        }
                                                    </div>
                                                </div>
                                                @if (!string.IsNullOrEmpty(item.Description))
                                                {
                                                    <div class="menu-item-description">@item.Description</div>
                                                }
                                            </div>
                                            <div class="menu-item-price">₹@item.Price.ToString("0.00")</div>
                                                <img src="@(string.IsNullOrEmpty(item.ImageUrl) ? "/images/placeholder-dish.png" : item.ImageUrl)" alt="@item.Name" class="menu-item-image" onerror="this.onerror=null;this.src='/images/placeholder-dish.png';" />
                                        </div>
                                    }
                                </div>
                            }
                        </div>
                    }
                </div>
            }
        }
        else if (Model.MenuCategories.Any())
        {
            // Backward compatible rendering if groups not present
            foreach (var category in Model.MenuCategories)
            {
                <div class="menu-category">
                    <div class="category-header">
                        <h3>@category.CategoryName</h3>
                        @if (!string.IsNullOrEmpty(category.CategoryDescription))
                        {
                            <div class="category-description">@category.CategoryDescription</div>
                        }
                    </div>
                    @if (category.SubCategories != null && category.SubCategories.Any())
                    {
                        foreach (var subcat in category.SubCategories)
                        {
                            <div class="ps-3 pb-2 pt-2">
                                @if (!string.IsNullOrEmpty(subcat.SubCategoryName))
                                {
                                    <h5 class="fw-bold mb-2" style="color:#2980b9">@subcat.SubCategoryName</h5>
                                }
                                <div class="menu-items">
                                    @if (subcat.MenuItems.Any())
                                    {
                                        foreach (var item in subcat.MenuItems)
                                        {
                                            <div class="menu-item @(item.IsAvailable ? string.Empty : "unavailable")">
                                                <div class="menu-item-info">
                                                    <div class="menu-item-name">
                                                        @item.Name
                                                        <div class="menu-item-badges">
                                                            @if (!item.IsAvailable)
                                                            {
                                                                <span class="unavailable-badge">UNAVAILABLE</span>
                                                            }
                                                            @if (item.IsVegetarian)
                                                            {
                                                                <span class="badge-veg"><i class="fas fa-leaf"></i> VEG</span>
                                                            }
                                                            @if (item.IsSpicy)
                                                            {
                                                                <span class="badge-spicy"><i class="fas fa-fire"></i> SPICY</span>
                                                            }
                                                        </div>
                                                    </div>
                                                    @if (!string.IsNullOrEmpty(item.Description))
                                                    {
                                                        <div class="menu-item-description">@item.Description</div>
                                                    }
                                                </div>
                                                <div class="menu-item-price">₹@item.Price.ToString("0.00")</div>
                                                <img src="@(string.IsNullOrEmpty(item.ImageUrl) ? "/images/placeholder-dish.png" : item.ImageUrl)" alt="@item.Name" class="menu-item-image" onerror="this.onerror=null;this.src='/images/placeholder-dish.png';" />
                                            </div>
                                        }
                                    }
                                </div>
                            </div>
                        }
                    }
                </div>
            }
        }
        else
        {
            <div class="menu-category">
                <div class="menu-items">
                    <div class="no-items">
                        <i class="fas fa-utensils fa-3x mb-3 text-muted"></i>
                        <h4>Menu Coming Soon</h4>
                        <p>Our delicious menu will be available shortly. Please check back soon!</p>
                    </div>
                </div>
            </div>
        }

        <div class="footer-info">
            <h5><i class="fas fa-heart text-danger"></i> Thank you for choosing @Model.RestaurantInfo.Name!</h5>
            <p class="mb-2">@Model.RestaurantInfo.Description</p>
            
            @if (!string.IsNullOrEmpty(Model.RestaurantInfo.Email))
            {
                <p class="mb-1"><i class="fas fa-envelope"></i> @Model.RestaurantInfo.Email</p>
            }
            
            @if (!string.IsNullOrEmpty(Model.RestaurantInfo.Website))
            {
                <p class="mb-1"><i class="fas fa-globe"></i> @Model.RestaurantInfo.Website</p>
            }
            
            <div class="qr-timestamp">
                Menu accessed on @DateTime.Now.ToString("MMM dd, yyyy 'at' hh:mm tt")
                @if (Model.IsTableSpecific)
                {
                    <br />@: via @Model.TableName QR Code
                }
            </div>
        </div>
    </div>

    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Auto-refresh menu every 5 minutes to get latest availability
        setTimeout(function() {
            location.reload();
        }, 300000);
        
        // Add smooth scrolling
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                document.querySelector(this.getAttribute('href')).scrollIntoView({
                    behavior: 'smooth'
                });
            });
        });

        (function () {
            const btn = document.getElementById('exportPdfBtn');
            if (!btn) return;

            const overlay = document.getElementById('exportOverlay');
            const root = document.getElementById('menuExportRoot');

            function setOverlayVisible(visible) {
                if (!overlay) return;
                overlay.style.display = visible ? 'flex' : 'none';
                overlay.setAttribute('aria-hidden', visible ? 'false' : 'true');
            }

            function injectScript(url) {
                return new Promise((resolve, reject) => {
                    const s = document.createElement('script');
                    s.src = url;
                    s.async = true;
                    s.onload = () => resolve();
                    s.onerror = () => reject(new Error('Failed to load: ' + url));
                    document.head.appendChild(s);
                });
            }

            async function ensureHtml2PdfLoaded() {
                if (typeof window.html2pdf !== 'undefined') return;

                const candidates = [
                    'https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.10.1/html2pdf.bundle.min.js',
                    'https://cdn.jsdelivr.net/npm/html2pdf.js@0.10.1/dist/html2pdf.bundle.min.js',
                    'https://unpkg.com/html2pdf.js@0.10.1/dist/html2pdf.bundle.min.js'
                ];

                let lastError = null;
                for (const url of candidates) {
                    try {
                        await injectScript(url);
                        if (typeof window.html2pdf !== 'undefined') return;
                    } catch (e) {
                        lastError = e;
                    }
                }
                throw lastError || new Error('html2pdf failed to load');
            }

            btn.addEventListener('click', async function (e) {
                e.preventDefault();
                if (!root) return;

                try {
                    await ensureHtml2PdfLoaded();

                    setOverlayVisible(true);
                    document.body.classList.add('exporting');

                    // Ensure images are loaded before rendering
                    const imgs = Array.from(root.querySelectorAll('img'));
                    await Promise.all(imgs.map(img => {
                        if (img.complete) return Promise.resolve();
                        return new Promise(resolve => {
                            img.addEventListener('load', resolve, { once: true });
                            img.addEventListener('error', resolve, { once: true });
                        });
                    }));

                    const fileName = `${(document.title || 'Menu').replace(/[^a-z0-9\-\s_]/gi, '').trim().replace(/\s+/g, '_') || 'Menu'}.pdf`;

                    const opt = {
                        margin: [10, 10, 10, 10],
                        filename: fileName,
                        image: { type: 'jpeg', quality: 0.95 },
                        html2canvas: { scale: 2, useCORS: true, allowTaint: true, backgroundColor: '#ffffff' },
                        jsPDF: { unit: 'mm', format: 'a4', orientation: 'portrait' },
                        pagebreak: { mode: ['css', 'legacy'] }
                    };

                    await html2pdf().set(opt).from(root).save();
                } catch (err) {
                    console.error('PDF export failed:', err);
                    alert('Failed to export PDF. Please ensure internet access is available (PDF library loads from CDN) and try again.');
                } finally {
                    document.body.classList.remove('exporting');
                    setOverlayVisible(false);
                }
            });
        })();
