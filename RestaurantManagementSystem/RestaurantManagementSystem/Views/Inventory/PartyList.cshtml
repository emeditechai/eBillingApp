@model IEnumerable<RestaurantManagementSystem.Models.InventoryParty>
@{
    ViewData["Title"] = "Party Master";
}

<h2 class="mb-4">Party Master</h2>

<a class="btn btn-success mb-3" asp-controller="Inventory" asp-action="PartyForm">
    <i class="bi bi-plus-circle"></i> Add New
</a>

@if (TempData["ResultMessage"] != null)
{
    <div class="alert alert-info">@TempData["ResultMessage"]</div>
}

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Party Code</th>
            <th>Party Name</th>
            <th>Party Type</th>
            <th>Phone Number</th>
            <th>Email</th>
            <th>Status</th>
            <th style="width: 280px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.PartyCode</td>
                <td>@item.PartyName</td>
                <td>@item.PartyType</td>
                <td>@(string.IsNullOrWhiteSpace(item.PhoneNumber) ? "-" : item.PhoneNumber)</td>
                <td>@(string.IsNullOrWhiteSpace(item.Email) ? "-" : item.Email)</td>
                <td>
                    @if (item.IsActive)
                    {
                        <span class="badge bg-success">Active</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Deactive</span>
                    }
                </td>
                <td>
                    <a class="btn btn-info btn-sm" asp-controller="Inventory" asp-action="PartyForm" asp-route-id="@item.Id" asp-route-isView="true">View</a>
                    <a class="btn btn-primary btn-sm" asp-controller="Inventory" asp-action="PartyForm" asp-route-id="@item.Id">Edit</a>

                    <form class="d-inline" asp-controller="Inventory" asp-action="SetPartyStatus" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@item.Id" />
                        <input type="hidden" name="isActive" value="@(!item.IsActive)" />
                        @if (item.IsActive)
                        {
                            <button type="submit" class="btn btn-warning btn-sm">Deactivate</button>
                        }
                        else
                        {
                            <button type="submit" class="btn btn-success btn-sm">Activate</button>
                        }
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
