@model RestaurantManagementSystem.Models.InventoryGodown
@{
    ViewData["Title"] = Model.Id == 0 ? "Add Godown" : "Edit Godown";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<form asp-action="GodownForm" asp-controller="Inventory" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="GodownCode" class="form-label"></label>
        <input asp-for="GodownCode" class="form-control" autocomplete="off" />
        <span asp-validation-for="GodownCode" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="GodownName" class="form-label"></label>
        <input asp-for="GodownName" class="form-control" autocomplete="off" />
        <span asp-validation-for="GodownName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Address" class="form-label"></label>
        <textarea asp-for="Address" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="mb-3 form-check">
        <input asp-for="IsActive" class="form-check-input" />
        <label asp-for="IsActive" class="form-check-label"></label>
    </div>

    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a href="@Url.Action("GodownMaster", "Inventory")" class="btn btn-secondary">Back</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            var isView = '@ViewBag.IsView' === 'True';
            if (isView) {
                $('#GodownCode').prop('disabled', true);
                $('#GodownName').prop('disabled', true);
                $('#Address').prop('disabled', true);
                $('#IsActive').prop('disabled', true);
                $('button[type=submit]').prop('disabled', true).addClass('disabled');
            }
        });
    </script>
}
